@model OmnitakSupportHub.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Omnitak Support Hub</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-deep-blue: #0F1419;
            --primary-navy: #1A237E;
            --accent-electric: #00E5FF;
            --accent-purple: #7B2CBF;
            --accent-gold: #FFB300;
            --accent-success: #4CAF50;
            --accent-warning: #FF9800;
            --accent-danger: #F44336;
            --surface-dark: #121212;
            --surface-elevated: #1E1E1E;
            --surface-card: #242424;
            --surface-glass: rgba(255, 255, 255, 0.05);
            --text-primary: #FFFFFF;
            --text-secondary: rgba(255, 255, 255, 0.7);
            --text-muted: rgba(255, 255, 255, 0.5);
            --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
            --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
            --gradient-card: linear-gradient(135deg, #1E1E1E 0%, #242424 100%);
            --shadow-glow: 0 0 40px rgba(0, 229, 255, 0.3);
            --shadow-deep: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
            --shadow-card: 0 8px 32px rgba(0, 0, 0, 0.3);
            --border-glow: rgba(0, 229, 255, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--primary-deep-blue);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Background */
        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--gradient-primary);
            z-index: -1;
        }

        .floating-orbs {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .orb {
            position: absolute;
            border-radius: 50%;
            background: var(--gradient-accent);
            opacity: 0.1;
            animation: float 20s infinite linear;
        }

            .orb:nth-child(1) {
                width: 300px;
                height: 300px;
                top: -150px;
                left: -150px;
            }

            .orb:nth-child(2) {
                width: 200px;
                height: 200px;
                top: 50%;
                right: -100px;
                animation-delay: -7s;
            }

            .orb:nth-child(3) {
                width: 400px;
                height: 400px;
                bottom: -200px;
                left: 30%;
                animation-delay: -14s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            33% {
                transform: translateY(-30px) rotate(120deg);
            }

            66% {
                transform: translateY(15px) rotate(240deg);
            }
        }

        /* Sidebar */
        .dashboard-container {
            display: flex;
            min-height: 100vh;
            position: relative;
            z-index: 1;
        }

        .sidebar {
            width: 280px;
            background: var(--surface-card);
            backdrop-filter: blur(20px);
            border-right: 1px solid var(--border-glow);
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 40px 30px 30px;
            text-align: center;
            border-bottom: 1px solid var(--border-glow);
            background: var(--gradient-accent);
        }

        .sidebar-logo {
            width: 60px;
            height: 60px;
            background: rgba(255,255,255,0.2);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            font-weight: 800;
            margin: 0 auto 15px;
            color: white;
        }

        .sidebar-title {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 5px;
            color: white;
        }

        nav ul {
            list-style: none;
            padding: 30px 0;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 16px 30px;
            color: var(--text-secondary);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--accent-electric);
                background: var(--surface-glass);
                border-left-color: var(--accent-electric);
            }

        /* Main */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 40px;
        }

        .welcome-section {
            margin-bottom: 40px;
        }

            .welcome-section h1 {
                font-size: 36px;
                font-weight: 800;
                background: var(--gradient-accent);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        /* Tables */
        .card {
            background: var(--surface-card);
            border: 1px solid var(--border-glow);
            border-radius: 16px;
            padding: 30px;
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 16px 20px;
                border-bottom: 1px solid var(--border-glow);
                text-align: left;
            }

            .table th {
                color: var(--accent-electric);
                text-transform: uppercase;
                font-size: 12px;
            }

        .btn {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-warning {
            background: linear-gradient(45deg, var(--accent-warning), #FFB74D);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(45deg, var(--accent-danger), #EF5350);
            color: white;
        }

        .btn-success {
            background: linear-gradient(45deg, var(--accent-success), #66BB6A);
            color: white;
        }

        .badge-role {
            padding: 4px 12px;
            font-size: 12px;
            font-weight: 600;
            border-radius: 20px;
            background: var(--gradient-accent);
            color: white;
        }
    </style>
</head>
<body>
    <div class="background-container">
        <div class="floating-orbs">
            <div class="orb"></div><div class="orb"></div><div class="orb"></div>
        </div>
    </div>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">A</div>
                <h3 class="sidebar-title">Admin Hub</h3>
                <p class="sidebar-subtitle">System Control</p>
            </div>
            <nav>
                <ul>
                    <li><a asp-controller="AdminDashboard" asp-action="Index" class="nav-link active"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                    <li><a asp-controller="Department" asp-action="Index" class="nav-link"><i class="bi bi-building"></i> Manage Departments</a></li>
                    <li><a asp-controller="ITStaff" asp-action="Index" class="nav-link"><i class="bi bi-people"></i> Manage IT Staff</a></li>
                    <li><a asp-controller="UserManagement" asp-action="Index" class="nav-link"><i class="bi bi-person-gear"></i> User Management</a></li>
                    <li><a asp-controller="UserManagement" asp-action="RoleManagement" class="nav-link"><i class="bi bi-shield-check"></i> Role Management</a></li>
                    <li><a href="#" class="nav-link"><i class="bi bi-bar-chart"></i> Reports</a></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="nav-link logout-btn"><i class="bi bi-box-arrow-right"></i> Logout</button>
                        </form>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="welcome-section">
                <h1>Welcome to the Admin Dashboard</h1>
                <p>You are logged in as an Administrator. Manage your system with full control.</p>
            </div>

            <!-- Pending Users -->
            @if (Model.PendingUsers != null && Model.PendingUsers.Any())
            {
                <div class="card">
                    <h2><i class="bi bi-person-plus"></i> Pending User Approvals</h2>
                    <table class="table">
                        <thead>
                            <tr><th>Full Name</th><th>Email</th><th>Department</th><th>Registration Date</th><th>Role Assignment</th><th>Actions</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.PendingUsers)
                            {
                                <tr>
                                    <td><strong>@user.FullName</strong></td>
                                    <td>@user.Email</td>
                                    <td>@(user.Department?.DepartmentName ?? "N/A")</td>
                                    <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <form asp-action="ApproveUser" method="post" id="approveForm-@user.UserID">
                                            <input type="hidden" name="userId" value="@user.UserID" />
                                            <select name="roleId" class="form-select" required>
                                                <option value="">Select Role</option>
                                                @foreach (var role in Model.AvailableRoles)
                                                {
                                                    <option value="@role.Value">@role.Text</option>
                                                }
                                            </select>
                                        </form>
                                    </td>
                                    <td>
                                        <button type="submit" form="approveForm-@user.UserID" class="btn btn-success"><i class="bi bi-check"></i> Approve</button>
                                        <form asp-action="RejectUser" method="post" style="display:inline;">
                                            <input type="hidden" name="userId" value="@user.UserID" />
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Reject this user?')"><i class="bi bi-x"></i> Reject</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <!-- Active Users -->
            @if (Model.ActiveUsers != null && Model.ActiveUsers.Any())
            {
                <div class="card">
                    <h2><i class="bi bi-people"></i> Active Users (@Model.ActiveUsers.Count())</h2>
                    <table class="table">
                        <thead>
                            <tr><th>Full Name</th><th>Email</th><th>Role</th><th>Department</th><th>Registered</th><th>Actions</th></tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.ActiveUsers)
                            {
                                <tr>
                                    <td><strong>@user.FullName</strong></td>
                                    <td>@user.Email</td>
                                    <td><span class="badge-role">@(user.Role?.RoleName ?? "N/A")</span></td>
                                    <td>@(user.Department?.DepartmentName ?? "N/A")</td>
                                    <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="EditUser" asp-route-id="@user.UserID" class="btn btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="DeactivateUser" asp-route-id="@user.UserID" class="btn btn-danger" onclick="return confirm('Deactivate this user?')">
                                            <i class="bi bi-person-x"></i> Deactivate
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </main>
    </div>
</body>
</html>
