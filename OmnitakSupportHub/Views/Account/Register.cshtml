@model OmnitakSupportHub.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Omnitak Support Hub</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-deep-blue: #0F1419;
            --primary-navy: #1A237E;
            --accent-electric: #00E5FF;
            --accent-purple: #7B2CBF;
            --accent-gold: #FFB300;
            --surface-elevated: #1E1E1E;
            --text-primary: #FFFFFF;
            --text-secondary: rgba(255, 255, 255, 0.7);
            --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
            --gradient-button: linear-gradient(135deg, #00E5FF 0%, #1A237E 100%);
            --error-color: #FF5252;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--primary-deep-blue);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: var(--gradient-primary);
        }

        .orb {
            position: absolute;
            border-radius: 50%;
            background: var(--accent-purple);
            opacity: 0.08;
            filter: blur(1px);
            animation: float 20s infinite linear;
        }

            .orb:nth-child(1) {
                width: 300px;
                height: 300px;
                top: -150px;
                left: -150px;
            }

            .orb:nth-child(2) {
                width: 200px;
                height: 200px;
                top: 50%;
                right: -100px;
                animation-delay: -7s;
            }

            .orb:nth-child(3) {
                width: 150px;
                height: 150px;
                bottom: -75px;
                left: 30%;
                animation-delay: -14s;
            }
        @@keyframes float {
            0%

        {
            transform: translateY(0) rotate(0);
        }

        50% {
            transform: translateY(-30px);
        }

        100% {
            transform: translateY(0) rotate(360deg);
        }

        }

        .register-container {
            display: flex;
            min-height: 100vh;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 10;
        }

        .register-card {
            width: 100%;
            max-width: 520px;
            background: var(--surface-elevated);
            border-radius: 18px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.35);
            padding: 40px 32px;
            animation: slideInUp 1.2s ease;
        }

        .form-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .form-title {
            font-size: 28px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 8px;
        }

        .form-subtitle {
            font-size: 15px;
            color: var(--text-secondary);
        }

        .form-group {
            margin-bottom: 22px;
        }

        .form-label {
            display: block;
            font-size: 13px;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 6px;
            text-transform: uppercase;
        }

        .form-control, .form-select {
            width: 100%;
            padding: 14px 18px;
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 12px;
            color: var(--text-primary);
            font-size: 15px;
            transition: all .3s;
        }

            .form-control:focus, .form-select:focus {
                outline: none;
                border-color: var(--accent-electric);
                background: rgba(255,255,255,0.08);
                box-shadow: 0 0 12px rgba(0,229,255,0.3);
            }

            .form-control::placeholder {
                color: rgba(255,255,255,0.4);
            }

        .password-hint {
            font-size: 0.8rem;
            color: rgba(255,255,255,0.5);
            margin-top: 4px;
        }

        .btn-register {
            width: 100%;
            padding: 16px;
            background: var(--gradient-button);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 12px;
            animation: pulse 3s infinite;
        }

            .btn-register:hover {
                transform: translateY(-2px) scale(1.02);
                box-shadow: 0 0 25px rgba(0,229,255,0.5);
            }

        @@keyframes pulse {
            0%,100%

        {
            box-shadow: 0 0 15px rgba(0,229,255,0.2);
        }

        50% {
            box-shadow: 0 0 30px rgba(0,229,255,0.6);
        }

        }

        .text-danger {
            color: var(--error-color) !important;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }

        .validation-summary {
            background: rgba(255,82,82,0.15);
            border: 1px solid var(--error-color);
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
            color: var(--error-color);
        }

        .login-link {
            text-align: center;
            margin-top: 18px;
        }

            .login-link a {
                color: var(--accent-electric);
                font-weight: 500;
                text-decoration: none;
            }

                .login-link a:hover {
                    color: var(--accent-gold);
                    text-shadow: 0 0 8px rgba(255,179,0,0.5);
                }

        @@keyframes slideInUp {
            from

        {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }</style>
</head>
<body>
    <div class="background-container">
        <div class="orb"></div>
        <div class="orb"></div>
        <div class="orb"></div>
    </div>

    <div class="register-container">
        <div class="register-card">
            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div class="form-header">
                    <h2 class="form-title">Create an account</h2>
                    <p class="form-subtitle">Join Omnitak Support Hub today</p>
                </div>

                <div asp-validation-summary="All" class="validation-summary"></div>

                <div class="form-group">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="password-hint">
                        Must be at least 8 characters and include: uppercase, lowercase, number, and special character
                    </small>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Department" class="form-label">Department</label>
                    <select asp-for="Department" asp-items="Model.AvailableDepartments" class="form-select">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-register">🚀 Register</button>

                <div class="login-link">
                    <p style="color: var(--text-secondary);">Already have an account?</p>
                    <a asp-action="Login" asp-controller="Account">Sign in here</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>