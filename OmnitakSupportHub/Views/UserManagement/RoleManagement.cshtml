@model List<OmnitakSupportHub.Models.Role>
@{
    ViewData["Title"] = "Role Management";
}

<style>
    :root {
        --primary-green: #10b981;
        --primary-green-dark: #059669;
        --primary-green-light: #34d399;
        --secondary-green: #065f46;
        --accent-green: #6ee7b7;
        --bg-primary: #f8fafc;
        --bg-secondary: #ffffff;
        --text-primary: #0f172a;
        --text-secondary: #64748b;
        --text-muted: #94a3b8;
        --border-color: #e2e8f0;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --radius-sm: 0.375rem;
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
        background: var(--bg-primary);
        color: var(--text-primary);
        line-height: 1.6;
    }

    .dashboard-container {
        display: flex;
        width: 100%;
        max-width: 1400px;
        margin: 20px auto;
        background: var(--bg-secondary);
        box-shadow: var(--shadow-lg);
        border-radius: var(--radius-lg);
    }

    .sidebar {
        width: 250px;
        background: linear-gradient(135deg, var(--primary-green) 0%, var(--secondary-green) 100%);
        color: white;
        padding: 20px;
        min-height: calc(100vh - 40px);
        border-radius: var(--radius-lg) 0 0 var(--radius-lg);
        box-shadow: var(--shadow-md);
    }

        .sidebar h3 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .sidebar .nav-link {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 16px;
            margin-bottom: 10px;
            border-radius: var(--radius-md);
            font-weight: 500;
            transition: background 0.3s ease, color 0.3s ease;
        }

            .sidebar .nav-link:hover,
            .sidebar .nav-link.active {
                background: rgba(255, 255, 255, 0.15);
                color: var(--accent-green);
            }

    .main-content {
        flex: 1;
        padding: 32px;
        background: var(--bg-secondary);
        border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid var(--primary-green);
    }

        .header h2 {
            color: var(--primary-green);
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        border: none;
        cursor: pointer;
        text-decoration: none;
        margin: 0 5px;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-sm);
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-dark) 100%);
        color: white;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-green-dark) 0%, var(--secondary-green) 100%);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
            transform: translateY(-1px);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            transform: translateY(-1px);
        }

    .btn-secondary {
        background: var(--bg-secondary);
        color: var(--text-secondary);
        border: 2px solid var(--border-color);
    }

        .btn-secondary:hover {
            background: var(--bg-primary);
            color: var(--primary-green);
            border-color: var(--primary-green);
        }

    .roles-grid {
        display: grid;
        gap: 25px;
        margin-top: 30px;
    }

    .role-card {
        background: var(--bg-secondary);
        border: 2px solid var(--border-color);
        border-radius: var(--radius-xl);
        padding: 30px;
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .role-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-green), var(--accent-green));
        }

        .role-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary-green);
        }

    .role-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
    }

    .role-info h3 {
        margin: 0 0 8px 0;
        color: var(--primary-green);
        font-size: 1.5rem;
        font-weight: 700;
    }

    .role-info p {
        margin: 0;
        color: var(--text-secondary);
        font-size: 1rem;
        line-height: 1.5;
    }

    .role-badges {
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: flex-end;
    }

    .system-badge {
        background: linear-gradient(135deg, var(--secondary-green), var(--primary-green-dark));
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .custom-badge {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .permissions-section {
        margin: 25px 0;
    }

    .permissions-title {
        color: var(--text-primary);
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 15px;
        border-bottom: 1px solid var(--border-color);
        padding-bottom: 8px;
    }

    .permissions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 12px;
    }

    .permission-item {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        background: var(--bg-primary);
        border-radius: var(--radius-md);
        font-size: 0.9rem;
    }

    .permission-enabled {
        color: var(--primary-green);
    }

    .permission-disabled {
        color: var(--text-muted);
    }

    .role-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 25px;
        padding-top: 20px;
        border-top: 1px solid var(--border-color);
    }

    .alert {
        margin-bottom: 25px;
        padding: 15px 20px;
        border-radius: var(--radius-md);
        font-size: 1rem;
        font-weight: 600;
        border-left: 5px solid;
        box-shadow: var(--shadow-sm);
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: var(--primary-green);
        border-left-color: var(--primary-green);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #dc2626;
        border-left-color: #dc2626;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
        color: white;
        padding: 25px;
        border-radius: var(--radius-lg);
        text-align: center;
        box-shadow: var(--shadow-md);
    }

        .stat-card h3 {
            font-size: 2.5rem;
            margin: 0;
            font-weight: 700;
        }

        .stat-card p {
            margin: 5px 0 0;
            font-size: 1.1rem;
            opacity: 0.9;
        }

    @@media (max-width: 1024px) {
        .role-header {
            flex-direction: column;
            gap: 15px;
        }

        .role-badges {
            align-items: flex-start;
        }

        .role-actions {
            justify-content: center;
        }
    }

    @@media (max-width: 768px) {
        .dashboard-container {
            flex-direction: column;
            margin: 10px;
        }

        .sidebar {
            width: 100%;
            min-height: auto;
            border-radius: var(--radius-lg) var(--radius-lg) 0 0;
        }

        .main-content {
            border-radius: 0 0 var(--radius-lg) var(--radius-lg);
            padding: 20px;
        }

        .header {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }

        .permissions-grid {
            grid-template-columns: 1fr;
        }

        .role-actions {
            flex-direction: column;
        }
    }
</style>

<div class="dashboard-container">
    <div class="sidebar">
        <h3>Admin Menu</h3>
        <a asp-controller="AdminDashboard" asp-action="Index" class="nav-link">Dashboard</a>
        <a asp-controller="Department" asp-action="Index" class="nav-link">Manage Departments</a>
        <a asp-controller="ITStaff" asp-action="Index" class="nav-link">Manage IT Staff</a>
        <a asp-controller="UserManagement" asp-action="Index" class="nav-link">User Management</a>
        <a asp-controller="UserManagement" asp-action="RoleManagement" class="nav-link active">Role Management</a>
        <a href="#" class="nav-link">Reports</a>
    </div>

    <div class="main-content">
        <div class="header">
            <div>
                <h2>Role Management</h2>
                <p>Manage system roles and permissions</p>
            </div>
            <div>
                <a asp-action="CreateRole" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Role
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-users"></i> Back to Users
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="stats-grid">
            <div class="stat-card">
                <h3>@Model.Count</h3>
                <p>Total Roles</p>
            </div>
            <div class="stat-card">
                <h3>@Model.Count(r => r.IsSystemRole)</h3>
                <p>System Roles</p>
            </div>
            <div class="stat-card">
                <h3>@Model.Count(r => !r.IsSystemRole)</h3>
                <p>Custom Roles</p>
            </div>
        </div>

        <div class="roles-grid">
            @if (Model.Any())
            {
                @foreach (var role in Model)
                {
                    <div class="role-card">
                        <div class="role-header">
                            <div class="role-info">
                                <h3>@role.RoleName</h3>
                                <p>@(string.IsNullOrEmpty(role.Description) ? "No description provided" : role.Description)</p>
                            </div>
                            <div class="role-badges">
                                @if (role.IsSystemRole)
                                {
                                    <span class="system-badge">
                                        <i class="fas fa-shield-alt"></i> System
                                    </span>
                                }
                                else
                                {
                                    <span class="custom-badge">
                                        <i class="fas fa-user-cog"></i> Custom
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="permissions-section">
                            <h4 class="permissions-title">
                                <i class="fas fa-key"></i> Permissions
                            </h4>
                            <div class="permissions-grid">
                                <div class="permission-item @(role.CanApproveUsers ? "permission-enabled" : "permission-disabled")">
                                    <i class="fas @(role.CanApproveUsers ? "fa-check" : "fa-times")"></i>
                                    <span>Approve Users</span>
                                </div>
                                <div class="permission-item @(role.CanManageTickets ? "permission-enabled" : "permission-disabled")">
                                    <i class="fas @(role.CanManageTickets ? "fa-check" : "fa-times")"></i>
                                    <span>Manage Tickets</span>
                                </div>
                                <div class="permission-item @(role.CanViewAllTickets ? "permission-enabled" : "permission-disabled")">
                                    <i class="fas @(role.CanViewAllTickets ? "fa-check" : "fa-times")"></i>
                                    <span>View All Tickets</span>
                                </div>
                                <div class="permission-item @(role.CanManageKnowledgeBase ? "permission-enabled" : "permission-disabled")">
                                    <i class="fas @(role.CanManageKnowledgeBase ? "fa-check" : "fa-times")"></i>
                                    <span>Manage Knowledge Base</span>
                                </div>
                                <div class="permission-item @(role.CanViewReports ? "permission-enabled" : "permission-disabled")">
                                    <i class="fas @(role.CanViewReports ? "fa-check" : "fa-times")"></i>
                                    <span>View Reports</span>
                                </div>
                                <div class="permission-item @(role.CanManageTeams ? "permission-enabled" : "permission-disabled")">
                                    <i class="fas @(role.CanManageTeams ? "fa-check" : "fa-times")"></i>
                                    <span>Manage Teams</span>
                                </div>
                            </div>
                        </div>

                        <div class="role-actions">
                            <a asp-action="EditRole" asp-route-id="@role.RoleID" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            @if (!role.IsSystemRole)
                            {
                                <form asp-action="DeleteRole" asp-route-id="@role.RoleID" method="post" style="display: inline;"
                                      onsubmit="return confirm('Are you sure you want to delete this role? This action cannot be undone.');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled title="System roles cannot be deleted">
                                    <i class="fas fa-lock"></i> Protected
                                </button>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No roles found in the system.
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>