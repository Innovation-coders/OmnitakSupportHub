@model OmnitakSupportHub.Models.ViewModels.UserManagementViewModel
@{
    ViewData["Title"] = "User Management";
}

<style>
    :root {
        --primary-green: #10b981;
        --primary-green-dark: #059669;
        --primary-green-light: #34d399;
        --secondary-green: #065f46;
        --accent-green: #6ee7b7;
        --bg-primary: #f8fafc;
        --bg-secondary: #ffffff;
        --text-primary: #0f172a;
        --text-secondary: #64748b;
        --text-muted: #94a3b8;
        --border-color: #e2e8f0;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --radius-sm: 0.375rem;
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
        background: var(--bg-primary);
        color: var(--text-primary);
        line-height: 1.6;
    }

    .dashboard-container {
        display: flex;
        width: 100%;
        max-width: 1400px;
        margin: 20px auto;
        background: var(--bg-secondary);
        box-shadow: var(--shadow-lg);
        border-radius: var(--radius-lg);
    }

    .sidebar {
        width: 250px;
        background: linear-gradient(135deg, var(--primary-green) 0%, var(--secondary-green) 100%);
        color: white;
        padding: 20px;
        min-height: calc(100vh - 40px);
        border-radius: var(--radius-lg) 0 0 var(--radius-lg);
        box-shadow: var(--shadow-md);
    }

        .sidebar h3 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            text-align: center;
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .sidebar .nav-link {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 16px;
            margin-bottom: 10px;
            border-radius: var(--radius-md);
            font-weight: 500;
            transition: background 0.3s ease, color 0.3s ease;
        }

            .sidebar .nav-link:hover,
            .sidebar .nav-link.active {
                background: rgba(255, 255, 255, 0.15);
                color: var(--accent-green);
            }

    .main-content {
        flex: 1;
        padding: 32px;
        background: var(--bg-secondary);
        border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid var(--primary-green);
    }

        .header h2 {
            color: var(--primary-green);
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .btn, .btn-primary, .btn-secondary, .btn-success, .btn-danger, .btn-warning {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        border: none;
        cursor: pointer;
        text-decoration: none;
        margin: 0 5px;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-sm);
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-dark) 100%);
        color: white;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-green-dark) 0%, var(--secondary-green) 100%);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .btn-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #059669 0%, #065f46 100%);
            transform: translateY(-1px);
        }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
            transform: translateY(-1px);
        }

    .btn-secondary {
        background: var(--bg-secondary);
        color: var(--text-secondary);
        border: 2px solid var(--border-color);
    }

        .btn-secondary:hover {
            background: var(--bg-primary);
            color: var(--primary-green);
            border-color: var(--primary-green);
        }

    .users-grid {
        display: grid;
        gap: 20px;
        margin-top: 30px;
    }

    .user-card {
        background: var(--bg-secondary);
        border: 2px solid var(--border-color);
        border-radius: var(--radius-lg);
        padding: 25px;
        box-shadow: var(--shadow-md);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .user-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-green), var(--accent-green));
        }

        .user-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary-green);
        }

    .user-info {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 2fr auto;
        gap: 20px;
        align-items: center;
    }

    .user-details h4 {
        margin: 0 0 8px 0;
        color: var(--primary-green);
        font-size: 1.3rem;
        font-weight: 700;
    }

    .user-details p {
        margin: 0;
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .department-tag {
        background: linear-gradient(135deg, var(--primary-green-light), var(--accent-green));
        color: var(--secondary-green);
        padding: 8px 16px;
        border-radius: var(--radius-lg);
        font-weight: 600;
        text-align: center;
        font-size: 0.9rem;
        box-shadow: var(--shadow-sm);
    }

    .current-role {
        background: linear-gradient(135deg, var(--secondary-green), var(--primary-green-dark));
        color: white;
        padding: 8px 16px;
        border-radius: var(--radius-lg);
        font-weight: 600;
        text-align: center;
        font-size: 0.9rem;
        box-shadow: var(--shadow-sm);
    }

    .role-selector {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .role-select {
        padding: 8px 12px;
        border: 2px solid var(--border-color);
        border-radius: var(--radius-md);
        background: var(--bg-secondary);
        color: var(--text-primary);
        font-size: 0.95rem;
        min-width: 150px;
        transition: border-color 0.3s ease;
    }

        .role-select:focus {
            border-color: var(--primary-green);
            outline: none;
        }

    .update-btn {
        padding: 8px 16px;
        background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-dark) 100%);
        color: white;
        border: none;
        border-radius: var(--radius-md);
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-sm);
    }

        .update-btn:hover {
            background: linear-gradient(135deg, var(--primary-green-dark) 0%, var(--secondary-green) 100%);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

    .alert {
        margin-bottom: 25px;
        padding: 15px 20px;
        border-radius: var(--radius-md);
        font-size: 1rem;
        font-weight: 600;
        border-left: 5px solid;
        box-shadow: var(--shadow-sm);
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.1);
        color: var(--primary-green);
        border-left-color: var(--primary-green);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        color: #dc2626;
        border-left-color: #dc2626;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
        color: white;
        padding: 25px;
        border-radius: var(--radius-lg);
        text-align: center;
        box-shadow: var(--shadow-md);
    }

        .stat-card h3 {
            font-size: 2.5rem;
            margin: 0;
            font-weight: 700;
        }

        .stat-card p {
            margin: 5px 0 0;
            font-size: 1.1rem;
            opacity: 0.9;
        }

    @@media (max-width: 1024px) {
        .user-info {
            grid-template-columns: 1fr;
            gap: 15px;
            text-align: center;
        }

        .role-selector {
            justify-content: center;
        }
    }

    @@media (max-width: 768px) {
        .dashboard-container {
            flex-direction: column;
            margin: 10px;
        }

        .sidebar {
            width: 100%;
            min-height: auto;
            border-radius: var(--radius-lg) var(--radius-lg) 0 0;
        }

        .main-content {
            border-radius: 0 0 var(--radius-lg) var(--radius-lg);
            padding: 20px;
        }

        .header {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }

        .action-buttons {
            justify-content: center;
        }
    }
</style>

<div class="dashboard-container">
    <div class="sidebar">
        <h3>Admin Menu</h3>
        <a asp-controller="AdminDashboard" asp-action="Index" class="nav-link">Dashboard</a>
        <a asp-controller="Department" asp-action="Index" class="nav-link">Manage Departments</a>
        <a asp-controller="ITStaff" asp-action="Index" class="nav-link">Manage IT Staff</a>
        <a asp-controller="UserManagement" asp-action="Index" class="nav-link active">User Management</a>
        <a asp-controller="UserManagement" asp-action="RoleManagement" class="nav-link">Role Management</a>
        <a href="#" class="nav-link">Reports</a>
    </div>

    <div class="main-content">
        <div class="header">
            <div>
                <h2>User Management</h2>
                <p>Manage system users and their roles</p>
            </div>
            <div class="action-buttons">
                <a asp-action="CreateRole" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Role
                </a>
                <a asp-action="RoleManagement" class="btn btn-secondary">
                    <i class="fas fa-cog"></i> Manage Roles
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="stats-grid">
            <div class="stat-card">
                <h3>@Model.Users.Count</h3>
                <p>Active Users</p>
            </div>
            <div class="stat-card">
                <h3>@Model.AvailableRoles.Count</h3>
                <p>Available Roles</p>
            </div>
            <div class="stat-card">
                <h3>@Model.Users.Where(u => u.Department != null).GroupBy(u => u.DepartmentId).Count()</h3>
                <p>Departments</p>
            </div>
        </div>

        <div class="users-grid">
            @if (Model.Users.Any())
            {
                @foreach (var user in Model.Users)
                {
                    <div class="user-card">
                        <div class="user-info">
                            <div class="user-details">
                                <h4>@user.FullName</h4>
                                <p><i class="fas fa-envelope"></i> @user.Email</p>
                                <p><i class="fas fa-calendar"></i> Joined: @user.CreatedAt.ToString("MMM dd, yyyy")</p>
                            </div>

                            <div class="department-tag">
                                <i class="fas fa-building"></i>
                                @(user.Department?.DepartmentName ?? "No Department")
                            </div>

                            <div class="current-role">
                                <i class="fas fa-user-tag"></i>
                                @(user.Role?.RoleName ?? "No Role")
                            </div>

                            <form asp-action="UpdateUserRole" method="post" class="role-selector">
                                <input type="hidden" name="userId" value="@user.UserID" />
                                <select name="roleId" class="role-select" required>
                                    <option value="">-- Select New Role --</option>
                                    @foreach (var role in Model.AvailableRoles)
                                    {
                                        <option value="@role.Value"
                                                selected="@(role.Value == user.RoleID?.ToString())">
                                            @role.Text
                                        </option>

                                    }
                                </select>
                                <button type="submit" class="update-btn">
                                    <i class="fas fa-save"></i> Update
                                </button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No active users found in the system.
                </div>
            }
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>