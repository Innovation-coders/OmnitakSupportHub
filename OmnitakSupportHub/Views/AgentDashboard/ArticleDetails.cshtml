@model OmnitakSupportHub.Models.ViewModels.ArticleDetailViewModel
@{
    ViewData["Title"] = Model.Article.Title;
}

<style>
    .article-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 0;
    }

    .breadcrumb-custom {
        background: none;
        padding: 0;
        margin: 0;
    }

        .breadcrumb-custom .breadcrumb-item a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
        }

        .breadcrumb-custom .breadcrumb-item.active {
            color: white;
        }

    .article-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .article-meta-bar {
        background: #f8fafc;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 2rem;
        border-left: 4px solid #667eea;
    }

    .article-content {
        line-height: 1.8;
        color: #2d3748;
        font-size: 1.1rem;
    }

    .sidebar-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
        position: sticky;
        top: 2rem;
    }

    .related-article {
        padding: 0.75rem 0;
        border-bottom: 1px solid #e2e8f0;
    }

        .related-article:last-child {
            border-bottom: none;
        }

    .related-article-title {
        color: #2d3748;
        font-weight: 500;
        text-decoration: none;
        font-size: 0.9rem;
        line-height: 1.4;
    }

        .related-article-title:hover {
            color: #667eea;
        }

    .category-badge {
        background: #e2e8f0;
        color: #4a5568;
        padding: 0.125rem 0.5rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        color: white;
        font-weight: 500;
        transition: transform 0.2s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-primary-custom:hover {
            transform: translateY(-1px);
            color: white;
            text-decoration: none;
        }

    .btn-outline-custom {
        border: 2px solid #e2e8f0;
        color: #4a5568;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 500;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-outline-custom:hover {
            border-color: #667eea;
            background: #667eea;
            color: white;
            text-decoration: none;
        }

    .btn-warning-custom {
        background: #f59e0b;
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
    }

        .btn-warning-custom:hover {
            background: #d97706;
            color: white;
            text-decoration: none;
        }

    .btn-danger-custom {
        background: #ef4444;
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
    }

        .btn-danger-custom:hover {
            background: #dc2626;
            color: white;
            text-decoration: none;
        }

    @@media print {
        .no-print

    {
        display: none !important;
    }

    .article-header {
        background: none !important;
        color: black !important;
    }

    }

    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="article-header no-print">
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item">
                    <a href="/AgentDashboard">
                        <i class="bi bi-house me-1"></i>Dashboard
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/AgentDashboard/KnowledgeBase">Knowledge Base</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Article.Title</li>
            </ol>
        </nav>

        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 mb-3">@Model.Article.Title</h1>
                <p class="lead mb-0">
                    <i class="bi bi-tag me-2"></i>@Model.Article.Category?.CategoryName
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <div class="btn-group">
                    <a href="@Model.BackUrl" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left me-2"></i>Back to Knowledge Base
                    </a>
                    @if (Model.CanEdit)
                    {
                        <a href="/AgentDashboard/EditArticle/@Model.Article.ArticleID" class="btn btn-warning">
                            <i class="bi bi-pencil me-2"></i>Edit
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success fade-in no-print">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger fade-in no-print">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <!-- Main Article Content -->
        <div class="col-lg-8">
            <div class="article-card fade-in">
                <!-- Article Meta -->
                <div class="article-meta-bar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-person-circle me-2 text-muted"></i>
                                <span class="small">
                                    <strong>Created by:</strong> @Model.Article.CreatedByUser?.FullName
                                </span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar me-2 text-muted"></i>
                                <span class="small">
                                    <strong>Published:</strong> @Model.Article.CreatedAt.ToString("MMMM dd, yyyy")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-pencil me-2 text-muted"></i>
                                <span class="small">
                                    <strong>Last updated:</strong> @Model.Article.UpdatedAt.ToString("MMMM dd, yyyy")
                                </span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person me-2 text-muted"></i>
                                <span class="small">
                                    <strong>Updated by:</strong> @Model.Article.LastUpdatedByUser?.FullName
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Article Content -->
                <div class="article-content">
                    @Html.Raw(Model.Article.Content.Replace("\n", "<br>"))
                </div>

                <!-- Article Actions -->
                @if (Model.CanEdit)
                {
                    <div class="mt-4 pt-4 border-top no-print">
                        <h5 class="mb-3">Article Management</h5>
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="/AgentDashboard/EditArticle/@Model.Article.ArticleID"
                               class="btn-warning-custom">
                                <i class="bi bi-pencil me-2"></i>Edit Article
                            </a>
                            <button onclick="window.print()" class="btn-outline-custom">
                                <i class="bi bi-printer me-2"></i>Print Article
                            </button>
                            <form method="post" asp-action="DeleteArticle" asp-route-id="@Model.Article.ArticleID" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-danger-custom"
                                        onclick="return confirm('Are you sure you want to delete this article? This action cannot be undone.')">
                                    <i class="bi bi-trash me-2"></i>Delete Article
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Related Articles -->
            @if (Model.RelatedArticles.Any())
            {
                <div class="sidebar-card fade-in no-print">
                    <div class="p-3 border-bottom">
                        <h6 class="mb-0">
                            <i class="bi bi-link-45deg me-2"></i>
                            Related Articles
                        </h6>
                    </div>
                    <div class="p-3">
                        @foreach (var article in Model.RelatedArticles)
                        {
                            <div class="related-article">
                                <a href="/AgentDashboard/ArticleDetails/@article.ArticleID" class="related-article-title">
                                    @article.Title
                                </a>
                                <div class="mt-1">
                                    <span class="category-badge">@article.Category?.CategoryName</span>
                                    <small class="ms-2 text-muted">@article.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Related Tickets -->
            @if (Model.RelatedTickets.Any())
            {
                <div class="sidebar-card fade-in no-print">
                    <div class="p-3 border-bottom">
                        <h6 class="mb-0">
                            <i class="bi bi-ticket me-2"></i>
                            Related Tickets
                        </h6>
                    </div>
                    <div class="p-3">
                        @foreach (var ticket in Model.RelatedTickets.Take(5))
                        {
                            <div class="related-article">
                                <a href="/AgentDashboard/TicketDetails/@ticket.TicketID" class="related-article-title">
                                    #@ticket.TicketID - @ticket.Title
                                </a>
                                <div class="mt-1">
                                    <span class="badge bg-@(ticket.Status?.StatusName == "Resolved" ? "success" : "primary")">
                                        @ticket.Status?.StatusName
                                    </span>
                                    <small class="ms-2 text-muted">@ticket.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Quick Actions -->
            <div class="sidebar-card fade-in no-print">
                <div class="p-3 border-bottom">
                    <h6 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Quick Actions
                    </h6>
                </div>
                <div class="p-3">
                    <div class="d-grid gap-2">
                        <a href="/AgentDashboard/KnowledgeBase" class="btn-primary-custom text-center">
                            <i class="bi bi-search me-2"></i>
                            Browse Knowledge Base
                        </a>
                        <a href="/AgentDashboard/KnowledgeBase?categoryId=@Model.Article.CategoryID" class="btn-outline-custom text-center">
                            <i class="bi bi-collection me-2"></i>
                            More in @Model.Article.Category?.CategoryName
                        </a>
                        <a href="/AgentDashboard/CreateArticle" class="btn-outline-custom text-center">
                            <i class="bi bi-plus-circle me-2"></i>
                            Create New Article
                        </a>
                        <a href="/AgentDashboard" class="btn-outline-custom text-center">
                            <i class="bi bi-house me-2"></i>
                            Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <!-- Article Stats -->
            <div class="sidebar-card fade-in no-print">
                <div class="p-3 border-bottom">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Article Statistics
                    </h6>
                </div>
                <div class="p-3">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="h5 mb-0 text-primary">@Model.ViewCount</div>
                            <small class="text-muted">Views</small>
                        </div>
                        <div class="col-6">
                            <div class="h5 mb-0 text-success">
                                @if (Model.IsBookmarked)
                                {
                                    <i class="bi bi-bookmark-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-bookmark"></i>
                                }
                            </div>
                            <small class="text-muted">Bookmarked</small>
                        </div>
                    </div>
                    <hr>
                    <small class="text-muted">
                        <i class="bi bi-clock me-1"></i>
                        Last viewed: @Model.LastViewed.ToString("MMM dd, yyyy 'at' h:mm tt")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>