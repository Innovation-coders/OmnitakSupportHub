@model OmnitakSupportHub.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Enterprise Login";
    Layout = null; // Remove default layout for full control
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Omnitak Support Hub</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            /* Premium Enterprise Color Palette */
            --primary-deep-blue: #0F1419;
            --primary-navy: #1A237E;
            --accent-electric: #00E5FF;
            --accent-purple: #7B2CBF;
            --accent-gold: #FFB300;
            --surface-dark: #121212;
            --surface-elevated: #1E1E1E;
            --surface-glass: rgba(255, 255, 255, 0.05);
            --text-primary: #FFFFFF;
            --text-secondary: rgba(255, 255, 255, 0.7);
            --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
            --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
            --gradient-button: linear-gradient(135deg, #00E5FF 0%, #1A237E 100%);
            --shadow-glow: 0 0 40px rgba(0, 229, 255, 0.3);
            --shadow-deep: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
            --error-color: #FF5252;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--primary-deep-blue);
            overflow: hidden;
            position: relative;
            min-height: 100vh;
        }

        /* Animated Background */
        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: var(--gradient-primary);
        }

        .floating-orbs {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .orb {
            position: absolute;
            border-radius: 50%;
            background: var(--gradient-accent);
            opacity: 0.1;
            filter: blur(1px);
            animation: float 20s infinite linear;
        }

            .orb:nth-child(1) {
                width: 300px;
                height: 300px;
                top: -150px;
                left: -150px;
                animation-delay: 0s;
            }

            .orb:nth-child(2) {
                width: 200px;
                height: 200px;
                top: 50%;
                right: -100px;
                animation-delay: -7s;
            }

            .orb:nth-child(3) {
                width: 150px;
                height: 150px;
                bottom: -75px;
                left: 30%;
                animation-delay: -14s;
            }

        @@keyframes float {
            0%

        {
            transform: translateY(0) rotate(0deg);
        }

        33% {
            transform: translateY(-30px) rotate(120deg);
        }

        66% {
            transform: translateY(15px) rotate(240deg);
        }

        100% {
            transform: translateY(0) rotate(360deg);
        }

        }

        /* Particle System */
        .particles {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: var(--accent-electric);
            border-radius: 50%;
            opacity: 0.6;
            animation: particleMove 25s infinite linear;
        }

        @@keyframes particleMove {
            0%

        {
            transform: translateY(100vh) translateX(-50px);
            opacity: 0;
        }

        10% {
            opacity: 0.6;
        }

        90% {
            opacity: 0.6;
        }

        100% {
            transform: translateY(-100px) translateX(50px);
            opacity: 0;
        }

        }

        /* Main Container */
        .login-container {
            display: flex;
            min-height: 100vh;
            position: relative;
            z-index: 10;
        }

        /* Left Panel - Brand & Features */
        .brand-panel {
            flex: 1.2;
            padding: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.1);
        }

        .brand-content {
            max-width: 500px;
            animation: slideInLeft 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .company-logo {
            width: 80px;
            height: 80px;
            background: var(--gradient-button);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            font-weight: 800;
            color: white;
            margin-bottom: 40px;
            box-shadow: var(--shadow-glow);
            animation: pulse 3s infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        }

        .brand-title {
            font-size: 48px;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 16px;
            background: var(--gradient-accent);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1.1;
        }

        .brand-subtitle {
            font-size: 20px;
            color: var(--text-secondary);
            margin-bottom: 48px;
            line-height: 1.6;
        }

        .features-list {
            list-style: none;
        }

        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 24px;
            padding: 20px;
            background: var(--surface-glass);
            border-radius: 16px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.4s ease;
            animation: fadeInUp 1s ease forwards;
            animation-delay: calc(var(--delay) * 0.2s);
            opacity: 0;
        }

            .feature-item:hover {
                transform: translateX(10px);
                background: rgba(255, 255, 255, 0.08);
                border-color: var(--accent-electric);
                box-shadow: 0 8px 32px rgba(0, 229, 255, 0.2);
            }

        .feature-icon {
            width: 48px;
            height: 48px;
            background: var(--gradient-button);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 20px;
            font-size: 20px;
            color: white;
            flex-shrink: 0;
        }

        .feature-text {
            font-size: 16px;
            color: var(--text-primary);
            font-weight: 500;
        }

        /* Right Panel - Login Form */
        .form-panel {
            flex: 1;
            padding: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(20px);
        }

        .login-form {
            width: 100%;
            max-width: 400px;
            animation: slideInRight 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .form-header {
            text-align: center;
            margin-bottom: 48px;
        }

        .form-title {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 12px;
        }

        .form-subtitle {
            font-size: 16px;
            color: var(--text-secondary);
        }

        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            color: var(--text-primary);
            font-size: 16px;
            font-family: 'Inter', sans-serif;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

            .form-control:focus {
                outline: none;
                border-color: var(--accent-electric);
                background: rgba(255, 255, 255, 0.08);
                box-shadow: 0 0 0 3px rgba(0, 229, 255, 0.1);
                transform: translateY(-2px);
            }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.4);
            }

        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }

        .form-check {
            display: flex;
            align-items: center;
        }

        .form-check-input {
            margin-right: 8px;
            transform: scale(1.2);
            accent-color: var(--accent-electric);
        }

        .form-check-label {
            font-size: 14px;
            color: var(--text-secondary);
            cursor: pointer;
        }

        .forgot-link {
            font-size: 14px;
            color: var(--accent-electric);
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .forgot-link:hover {
                color: var(--accent-gold);
                text-shadow: 0 0 8px rgba(255, 179, 0, 0.5);
            }

        .btn {
            width: 100%;
            padding: 16px;
            background: var(--gradient-button);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            font-family: 'Inter', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: var(--shadow-deep);
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-glow), var(--shadow-deep);
            }

            .btn:active {
                transform: translateY(0);
            }

            .btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.5s;
            }

            .btn:hover::before {
                left: 100%;
            }

        .divider {
            display: flex;
            align-items: center;
            margin: 32px 0;
        }

        .divider-line {
            flex: 1;
            height: 1px;
            background: rgba(255, 255, 255, 0.1);
        }

        .divider-text {
            margin: 0 16px;
            font-size: 14px;
            color: var(--text-secondary);
        }

        .register-link {
            text-align: center;
            margin-top: 24px;
        }

            .register-link a {
                color: var(--accent-electric);
                text-decoration: none;
                font-weight: 500;
                transition: all 0.3s ease;
            }

                .register-link a:hover {
                    color: var(--accent-gold);
                    text-shadow: 0 0 8px rgba(255, 179, 0, 0.5);
                }

        /* Error Styling */
        .text-danger {
            color: var(--error-color) !important;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }

        .input-validation-error {
            border-color: var(--error-color) !important;
            background: rgba(255, 82, 82, 0.1) !important;
        }

        .validation-summary-errors {
            background: rgba(255, 82, 82, 0.1);
            border: 1px solid var(--error-color);
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
            color: var(--error-color);
        }

            .validation-summary-errors ul {
                margin: 0;
                list-style: none;
            }

            .validation-summary-errors li {
                font-size: 14px;
                margin-bottom: 4px;
            }

        /* Animations */
        @@keyframes slideInLeft {
            from

        {
            opacity: 0;
            transform: translateX(-50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        @@keyframes slideInRight {
            from

        {
            opacity: 0;
            transform: translateX(50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive Design */
        @@media (max-width: 1024px) {
            .login-container

        {
            flex-direction: column;
        }

        .brand-panel {
            flex: none;
            padding: 40px;
            min-height: 40vh;
        }

        .form-panel {
            flex: none;
            padding: 40px;
        }

        .brand-title {
            font-size: 36px;
        }

        }

        @@media (max-width: 768px) {
            .brand-panel, .form-panel

        {
            padding: 24px;
        }

        .brand-title {
            font-size: 28px;
        }

        .feature-item {
            padding: 16px;
        }

        }

        /* Loading State */
        .loading {
            position: relative;
            pointer-events: none;
        }

            .loading::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 20px;
                height: 20px;
                margin: -10px 0 0 -10px;
                border: 2px solid transparent;
                border-top: 2px solid white;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }

        @@keyframes spin {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }
    </style>
</head>
<body>
    <!-- Animated Background -->
    <div class="background-container">
        <div class="floating-orbs">
            <div class="orb"></div>
            <div class="orb"></div>
            <div class="orb"></div>
        </div>
        <div class="particles" id="particles"></div>
    </div>

    <div class="login-container">
        <!-- Left Panel - Brand & Features -->
        <div class="brand-panel">
            <div class="brand-content">
                <div class="company-logo">O</div>
                <h1 class="brand-title">Omnitak Support Hub</h1>
                <p class="brand-subtitle">
                    Enterprise-grade IT support platform designed for modern businesses.
                    Streamline your operations with intelligent automation and real-time insights.
                </p>

                <ul class="features-list">
                    <li class="feature-item" style="--delay: 1">
                        <div class="feature-icon">🚀</div>
                        <div class="feature-text">AI-Powered Ticket Resolution</div>
                    </li>
                    <li class="feature-item" style="--delay: 2">
                        <div class="feature-icon">📊</div>
                        <div class="feature-text">Real-Time Analytics Dashboard</div>
                    </li>
                    <li class="feature-item" style="--delay: 3">
                        <div class="feature-icon">🔐</div>
                        <div class="feature-text">Enterprise Security Standards</div>
                    </li>
                    <li class="feature-item" style="--delay: 4">
                        <div class="feature-icon">⚡</div>
                        <div class="feature-text">Lightning-Fast Response Times</div>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Right Panel - Login Form -->
        <div class="form-panel">
            <form class="login-form" asp-action="Login" method="post" id="loginForm">
                @Html.AntiForgeryToken()

                <div class="form-header">
                    <h2 class="form-title">Welcome Back</h2>
                    <p class="form-subtitle">Sign in to access your enterprise dashboard</p>
                </div>

                <!-- Validation Summary -->
                <div asp-validation-summary="All" class="validation-summary-errors"></div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your company email" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your secure password" autocomplete="current-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-options">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Keep me signed in</label>
                    </div>
                    <a asp-action="ForgotPassword" class="forgot-link">Forgot Password?</a>
                </div>

                <button type="submit" class="btn" id="loginBtn">
                    Sign In to Dashboard
                </button>

                <div class="divider">
                    <div class="divider-line"></div>
                    <span class="divider-text">New to Omnitak?</span>
                    <div class="divider-line"></div>
                </div>

                <div class="register-link">
                    <a asp-action="Register">Request Enterprise Access</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Particle System
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 25 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 20) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Form Interactions
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();

            const form = document.getElementById('loginForm');
            const loginBtn = document.getElementById('loginBtn');
            const inputs = document.querySelectorAll('.form-control');

            // Enhanced input interactions
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'translateY(-2px)';
                });

                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'translateY(0)';
                });

                input.addEventListener('input', function() {
                    if (this.value) {
                        this.style.borderColor = 'var(--accent-electric)';
                        this.classList.remove('input-validation-error');
                    } else {
                        this.style.borderColor = 'rgba(255, 255, 255, 0.1)';
                    }
                });
            });

            // Form submission with loading state
            form.addEventListener('submit', function(e) {
                // Don't prevent default - let ASP.NET handle the form submission
                loginBtn.classList.add('loading');
                loginBtn.textContent = '';
                loginBtn.disabled = true;
            });

            // Add entrance animations to features
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animationPlayState = 'running';
                    }
                });
            });

            document.querySelectorAll('.feature-item').forEach(item => {
                observer.observe(item);
            });
        });

        // Add dynamic glow effect on mouse move
        document.addEventListener('mousemove', function(e) {
            const cursor = document.querySelector('.cursor-glow');
            if (!cursor) {
                const glowElement = document.createElement('div');
                glowElement.className = 'cursor-glow';
                glowElement.style.cssText = `
                    position: fixed;
                    width: 200px;
                    height: 200px;
                    background: radial-gradient(circle, rgba(0, 229, 255, 0.1) 0%, transparent 70%);
                    border-radius: 50%;
                    pointer-events: none;
                    z-index: 5;
                    mix-blend-mode: screen;
                    transform: translate(-50%, -50%);
                `;
                document.body.appendChild(glowElement);
            }

            const glowCursor = document.querySelector('.cursor-glow');
            glowCursor.style.left = e.clientX + 'px';
            glowCursor.style.top = e.clientY + 'px';
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>