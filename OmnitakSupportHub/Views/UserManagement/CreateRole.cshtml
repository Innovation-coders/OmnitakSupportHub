@model OmnitakSupportHub.Models.ViewModels.CreateRoleViewModel
@{
    ViewData["Title"] = Model.RoleID > 0 ? "Edit Role" : "Create New Role";
}
<style>
    :root {
        --primary-deep-blue: #0F1419;
        --primary-navy: #1A237E;
        --accent-electric: #00E5FF;
        --accent-purple: #7B2CBF;
        --accent-gold: #FFB300;
        --surface-card: #242424;
        --text-primary: #FFFFFF;
        --text-secondary: rgba(255,255,255,0.7);
        --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
        --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
        --shadow-card: 0 8px 32px rgba(0, 229, 255, 0.08);
        --border-glow: rgba(0, 229, 255, 0.3);
        --error-color: #F44336;
    }

    body {
        background: var(--gradient-primary);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
    }

    .admin-card {
        max-width: 800px;
        margin: 40px auto;
        background: var(--surface-card);
        border-radius: 24px;
        box-shadow: var(--shadow-card);
        padding: 2.5rem 2rem;
        color: var(--text-primary);
    }

    .form-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .form-title {
        font-size: 2rem;
        font-weight: 800;
        background: var(--gradient-accent);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
    }

    .form-subtitle {
        color: var(--text-secondary);
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .alert {
        margin-bottom: 25px;
        padding: 15px 20px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-left: 5px solid var(--accent-electric);
        background: rgba(0,229,255,0.1);
        color: var(--accent-electric);
        box-shadow: var(--shadow-card);
    }

    .alert-success {
        border-left-color: #4CAF50;
        background: rgba(76,175,80,0.1);
        color: #4CAF50;
    }

    .alert-danger {
        border-left-color: var(--error-color);
        background: rgba(244,67,54,0.1);
        color: var(--error-color);
    }

    .system-role-warning {
        background: rgba(255,179,0,0.08);
        color: var(--accent-gold);
        border-left: 5px solid var(--accent-gold);
        margin-bottom: 1rem;
        padding: 1rem;
        border-radius: 12px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: var(--text-primary);
        font-size: 1rem;
    }

    .form-control, textarea {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid var(--border-glow);
        border-radius: 8px;
        font-size: 1rem;
        background: var(--surface-card);
        color: var(--text-primary);
        transition: border-color 0.3s;
        box-sizing: border-box;
    }

        .form-control:focus, textarea:focus {
            outline: none;
            border-color: var(--accent-electric);
            box-shadow: 0 0 0 3px rgba(0,229,255,0.1);
        }

        .form-control.is-invalid {
            border-color: var(--error-color);
        }

    .invalid-feedback {
        color: var(--error-color);
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    .permissions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .permission-card {
        background: var(--primary-deep-blue);
        border: 2px solid var(--border-glow);
        border-radius: 16px;
        padding: 20px;
        transition: border-color 0.3s, box-shadow 0.3s;
        color: var(--text-primary);
    }

        .permission-card:hover {
            border-color: var(--accent-electric);
            box-shadow: var(--shadow-card);
        }

    .permission-item {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 15px;
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        border: 2px solid var(--border-glow);
        border-radius: 4px;
        background: var(--surface-card);
        cursor: pointer;
        transition: border-color 0.3s;
    }

        .form-check-input:checked {
            background-color: var(--accent-electric);
            border-color: var(--accent-electric);
        }

    .form-check-label {
        font-weight: 500;
        color: var(--text-primary);
        cursor: pointer;
        user-select: none;
    }

    .form-actions {
        display: flex;
        justify-content: center;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid var(--border-glow);
        gap: 20px;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        font-size: 1rem;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        text-decoration: none;
        transition: background 0.2s;
        box-shadow: var(--shadow-card);
    }

    .btn-primary {
        background: var(--gradient-accent);
        color: white;
    }

        .btn-primary:hover {
            background: var(--accent-gold);
            color: var(--primary-navy);
        }

    .btn-secondary {
        background: var(--surface-card);
        color: var(--text-secondary);
        border: 2px solid var(--border-glow);
    }

        .btn-secondary:hover {
            background: var(--accent-electric);
            color: #fff;
        }
    @@media (max-width: 768px) {
        .admin-card

    {
        margin: 20px;
        padding: 1.5rem 0.5rem;
    }

    .form-actions {
        flex-direction: column;
        gap: 10px;
    }

    .permissions-grid {
        grid-template-columns: 1fr;
    }

    }
</style>
<div class="admin-card">
    <div class="form-header">
        <div class="form-title">@ViewData["Title"]</div>
        <div class="form-subtitle">
            @(Model.RoleID > 0 ? "Modify role permissions and details" : "Define a new role with specific permissions")
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        </div>
    }
    <form asp-action="@(Model.RoleID > 0 ? "EditRole" : "CreateRole")" method="post">
        @if (Model.RoleID > 0)
        {
            <input type="hidden" asp-for="RoleID" />
            <input type="hidden" asp-for="IsSystemRole" />
        }
        <div class="form-group">
            <label asp-for="RoleName" class="form-label">
                <i class="fas fa-user-tag"></i> Role Name
            </label>
            <input asp-for="RoleName" class="form-control" placeholder="Enter role name..." />
            <span asp-validation-for="RoleName" class="invalid-feedback"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label">
                <i class="fas fa-align-left"></i> Description
            </label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter role description..."></textarea>
            <span asp-validation-for="Description" class="invalid-feedback"></span>
        </div>
        @if (Model.IsSystemRole && Model.RoleID > 0)
        {
            <div class="system-role-warning">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>System Role:</strong> This is a system-defined role. Some restrictions may apply.
            </div>
        }
        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-shield-alt"></i> Permissions
            </label>
            <div class="permissions-grid">
                <div class="permission-card">
                    <h4 style="margin-top: 0; color: var(--accent-electric);">User Management</h4>
                    <div class="permission-item">
                        <input asp-for="CanApproveUsers" type="checkbox" class="form-check-input" />
                        <label asp-for="CanApproveUsers" class="form-check-label">Can Approve Users</label>
                    </div>
                </div>
                <div class="permission-card">
                    <h4 style="margin-top: 0; color: var(--accent-electric);">Ticket Management</h4>
                    <div class="permission-item">
                        <input asp-for="CanManageTickets" type="checkbox" class="form-check-input" />
                        <label asp-for="CanManageTickets" class="form-check-label">Can Manage Tickets</label>
                    </div>
                    <div class="permission-item">
                        <input asp-for="CanViewAllTickets" type="checkbox" class="form-check-input" />
                        <label asp-for="CanViewAllTickets" class="form-check-label">Can View All Tickets</label>
                    </div>
                </div>
                <div class="permission-card">
                    <h4 style="margin-top: 0; color: var(--accent-electric);">Knowledge Base</h4>
                    <div class="permission-item">
                        <input asp-for="CanManageKnowledgeBase" type="checkbox" class="form-check-input" />
                        <label asp-for="CanManageKnowledgeBase" class="form-check-label">Can Manage Knowledge Base</label>
                    </div>
                </div>
                <div class="permission-card">
                    <h4 style="margin-top: 0; color: var(--accent-electric);">System Administration</h4>
                    <div class="permission-item">
                        <input asp-for="CanViewReports" type="checkbox" class="form-check-input" />
                        <label asp-for="CanViewReports" class="form-check-label">Can View Reports</label>
                    </div>
                    <div class="permission-item">
                        <input asp-for="CanManageTeams" type="checkbox" class="form-check-input" />
                        <label asp-for="CanManageTeams" class="form-check-label">Can Manage Teams</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                @(Model.RoleID > 0 ? "Update Role" : "Create Role")
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>