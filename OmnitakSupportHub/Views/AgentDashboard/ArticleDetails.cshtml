@model OmnitakSupportHub.Models.ViewModels.ArticleDetailViewModel
@{
    ViewData["Title"] = Model.Article.Title;
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Knowledge Base</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --primary-blue: #2563eb;
            --success-green: #16a34a;
            --warning-orange: #ea580c;
            --danger-red: #dc2626;
            --info-cyan: #0891b2;
            --light-gray: #f8fafc;
            --medium-gray: #64748b;
            --dark-gray: #334155;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --hover-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        body {
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .article-header {
            background: linear-gradient(135deg, var(--primary-blue) 0%, #1d4ed8 100%);
            color: white;
            padding: 2rem 0;
            box-shadow: var(--card-shadow);
        }

        .kb-card {
            background: white;
            border-radius: 16px;
            box-shadow: var(--card-shadow);
            margin-bottom: 1.5rem;
            overflow: hidden;
        }

        .card-header-custom {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            padding: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .article-content {
            padding: 2rem;
            line-height: 1.8;
            font-size: 1rem;
        }

            .article-content h1,
            .article-content h2,
            .article-content h3,
            .article-content h4,
            .article-content h5,
            .article-content h6 {
                color: var(--dark-gray);
                margin: 1.5rem 0 1rem 0;
                font-weight: 600;
            }

            .article-content h1 {
                font-size: 1.8rem;
            }

            .article-content h2 {
                font-size: 1.6rem;
            }

            .article-content h3 {
                font-size: 1.4rem;
            }

            .article-content p {
                margin-bottom: 1rem;
                color: var(--dark-gray);
            }

            .article-content ul,
            .article-content ol {
                margin: 1rem 0;
                padding-left: 2rem;
            }

            .article-content li {
                margin-bottom: 0.5rem;
            }

            .article-content code {
                background: #f1f5f9;
                padding: 0.2rem 0.4rem;
                border-radius: 4px;
                font-family: 'Courier New', monospace;
                color: var(--danger-red);
            }

            .article-content pre {
                background: #f8fafc;
                border: 1px solid #e2e8f0;
                border-radius: 8px;
                padding: 1rem;
                overflow-x: auto;
                margin: 1rem 0;
            }

            .article-content blockquote {
                border-left: 4px solid var(--primary-blue);
                background: #f8fafc;
                padding: 1rem;
                margin: 1rem 0;
                font-style: italic;
            }

        .article-meta {
            background: #f8fafc;
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
        }

        .meta-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem 0;
            border-bottom: 1px solid #e2e8f0;
        }

            .meta-item:last-child {
                border-bottom: none;
            }

        .meta-label {
            font-weight: 600;
            color: var(--medium-gray);
        }

        .meta-value {
            color: var(--dark-gray);
        }

        .category-badge {
            background: rgba(37, 99, 235, 0.1);
            color: var(--primary-blue);
            padding: 0.25rem 0.75rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .btn-action {
            border: none;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .btn-primary-custom {
            background: var(--primary-blue);
            color: white;
        }

            .btn-primary-custom:hover {
                background: #1d4ed8;
                color: white;
            }

        .btn-success-custom {
            background: var(--success-green);
            color: white;
        }

            .btn-success-custom:hover {
                background: #15803d;
                color: white;
            }

        .btn-warning-custom {
            background: var(--warning-orange);
            color: white;
        }

            .btn-warning-custom:hover {
                background: #c2410c;
                color: white;
            }

        .btn-outline-custom {
            border: 2px solid var(--primary-blue);
            color: var(--primary-blue);
            background: transparent;
        }

            .btn-outline-custom:hover {
                background: var(--primary-blue);
                color: white;
            }

        .related-article {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 0.75rem;
            transition: all 0.2s ease;
        }

            .related-article:hover {
                box-shadow: var(--card-shadow);
                transform: translateY(-1px);
            }

        .related-article-title {
            color: var(--dark-gray);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
            display: block;
        }

            .related-article-title:hover {
                color: var(--primary-blue);
            }

        .related-article-meta {
            font-size: 0.8rem;
            color: var(--medium-gray);
        }

        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .print-friendly {
            display: none;
        }

        @@media print {
            .no-print

        {
            display: none !important;
        }

        .print-friendly {
            display: block;
        }

        body {
            background: white;
        }

        .kb-card {
            box-shadow: none;
            border: 1px solid #ddd;
        }

        }

        @@media (max-width: 768px) {
            .article-header

        {
            padding: 1.5rem 0;
        }

        .article-content {
            padding: 1.5rem;
        }

        .btn-action {
            flex: 1;
            text-align: center;
            justify-content: center;
            margin-right: 0;
        }

        }
    </style>
</head>
<body>
    <!-- Article Header -->
    <div class="article-header no-print">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center mb-2">
                        <span class="category-badge me-3">@Model.Article.Category?.CategoryName</span>
                        <small class="opacity-75">
                            <i class="bi bi-calendar me-1"></i>
                            @Model.Article.CreatedAt.ToString("MMMM dd, yyyy")
                        </small>
                    </div>
                    <h1 class="mb-3">@Model.Article.Title</h1>
                    <p class="mb-0 opacity-75">
                        <i class="bi bi-person me-1"></i>
                        Created by @Model.Article.CreatedByUser?.FullName
                        @if (Model.Article.CreatedAt != Model.Article.UpdatedAt)
                        {
                            <span class="ms-3">
                                <i class="bi bi-arrow-repeat me-1"></i>
                                Updated @Model.Article.UpdatedAt.ToString("MMM dd, yyyy")
                            </span>
                        }
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="@Model.BackUrl" class="btn btn-light me-2">
                        <i class="bi bi-arrow-left me-1"></i>
                        Back
                    </a>
                    @if (Model.CanEdit)
                    {
                        <a href="/AgentDashboard/EditArticle/@Model.Article.ArticleID" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>
                            Edit
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Print-friendly header -->
    <div class="print-friendly container mt-3">
        <h1>@Model.Article.Title</h1>
        <p class="text-muted">
            Category: @Model.Article.Category?.CategoryName |
            Created: @Model.Article.CreatedAt.ToString("MMMM dd, yyyy") |
            Author: @Model.Article.CreatedByUser?.FullName
        </p>
        <hr>
    </div>

    <div class="container mt-4">
        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success fade-in no-print">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger fade-in no-print">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Article Content -->
                <div class="kb-card fade-in">
                    <div class="article-content">
                        @Html.Raw(Model.Article.Content.Replace("\n", "<br>"))
                    </div>
                </div>

                <!-- Article Actions -->
                <div class="kb-card fade-in no-print">
                    <div class="card-header-custom">
                        <h5 class="mb-0">
                            <i class="bi bi-tools me-2"></i>
                            Article Actions
                        </h5>
                    </div>
                    <div class="p-3">
                        <div class="d-flex flex-wrap gap-2">
                            <button onclick="window.print()" class="btn-action btn-outline-custom">
                                <i class="bi bi-printer"></i>
                                Print Article
                            </button>
                            <button onclick="copyToClipboard()" class="btn-action btn-outline-custom">
                                <i class="bi bi-clipboard"></i>
                                Copy Link
                            </button>
                            @if (Model.CanEdit)
                            {
                                <a href="/AgentDashboard/EditArticle/@Model.Article.ArticleID" class="btn-action btn-warning-custom">
                                    <i class="bi bi-pencil"></i>
                                    Edit Article
                                </a>
                            }
                            <a href="/AgentDashboard/CreateArticle" class="btn-action btn-success-custom">
                                <i class="bi bi-plus-circle"></i>
                                Create New Article
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Article Information -->
                <div class="kb-card fade-in no-print">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            Article Information
                        </h6>
                    </div>
                    <div class="article-meta">
                        <div class="meta-item">
                            <span class="meta-label">Category</span>
                            <span class="meta-value">
                                <span class="category-badge">@Model.Article.Category?.CategoryName</span>
                            </span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-label">Created By</span>
                            <span class="meta-value">@Model.Article.CreatedByUser?.FullName</span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-label">Created Date</span>
                            <span class="meta-value">@Model.Article.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</span>
                        </div>
                        @if (Model.Article.CreatedAt != Model.Article.UpdatedAt)
                        {
                            <div class="meta-item">
                                <span class="meta-label">Last Updated</span>
                                <span class="meta-value">@Model.Article.UpdatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</span>
                            </div>
                            <div class="meta-item">
                                <span class="meta-label">Updated By</span>
                                <span class="meta-value">@Model.Article.LastUpdatedByUser?.FullName</span>
                            </div>
                        }
                        <div class="meta-item">
                            <span class="meta-label">Article ID</span>
                            <span class="meta-value">#@Model.Article.ArticleID</span>
                        </div>
                    </div>
                </div>

                <!-- Related Articles -->
                @if (Model.RelatedArticles.Any())
                {
                    <div class="kb-card fade-in no-print">
                        <div class="card-header-custom">
                            <h6 class="mb-0">
                                <i class="bi bi-link-45deg me-2"></i>
                                Related Articles
                            </h6>
                        </div>
                        <div class="p-3">
                            @foreach (var article in Model.RelatedArticles)
                            {
                                <div class="related-article">
                                    <a href="/AgentDashboard/ArticleDetails/@article.ArticleID" class="related-article-title">
                                        @article.Title
                                    </a>
                                    <div class="related-article-meta">
                                        <span class="category-badge">@article.Category?.CategoryName</span>
                                        <small class="ms-2">@article.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Quick Actions -->
                <div class="kb-card fade-in no-print">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="bi bi-lightning me-2"></i>
                            Quick Actions
                        </h6>
                    </div>
                    <div class="p-3">
                        <div class="d-grid gap-2">
                            <a href="/AgentDashboard/KnowledgeBase" class="btn-action btn-primary-custom">
                                <i class="bi bi-search"></i>
                                Browse Knowledge Base
                            </a>
                            <a href="/AgentDashboard/KnowledgeBase?categoryId=@Model.Article.CategoryID" class="btn-action btn-outline-custom">
                                <i class="bi bi-collection"></i>
                                More in @Model.Article.Category?.CategoryName
                            </a>
                            <a href="/AgentDashboard" class="btn-action btn-outline-custom">
                                <i class="bi bi-house"></i>
                                Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Helpful? Section -->
                <div class="kb-card fade-in no-print">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="bi bi-question-circle me-2"></i>
                            Was this helpful?
                        </h6>
                    </div>
                    <div class="p-3 text-center">
                        <p class="small text-muted mb-3">Let us know if this article helped you resolve an issue.</p>
                        <div class="d-flex gap-2 justify-content-center">
                            <button class="btn-action btn-success-custom" onclick="markHelpful(true)">
                                <i class="bi bi-hand-thumbs-up"></i>
                                Yes, helpful
                            </button>
                            <button class="btn-action btn-outline-custom" onclick="markHelpful(false)">
                                <i class="bi bi-hand-thumbs-down"></i>
                                Not helpful
                            </button>
                        </div>
                        <div id="feedbackResult" class="mt-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Copy article link to clipboard
        function copyToClipboard() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(function() {
                const originalContent = event.target.innerHTML;
                event.target.innerHTML = '<i class="bi bi-check"></i> Copied!';
                event.target.classList.add('btn-success-custom');
                event.target.classList.remove('btn-outline-custom');

                setTimeout(() => {
                    event.target.innerHTML = originalContent;
                    event.target.classList.remove('btn-success-custom');
                    event.target.classList.add('btn-outline-custom');
                }, 2000);
            }).catch(function(err) {
                alert('Failed to copy link: ' + err);
            });
        }

        // Mark article as helpful or not
        function markHelpful(isHelpful) {
            const feedbackResult = document.getElementById('feedbackResult');

            feedbackResult.innerHTML = `
                <small class="text-success">
                    <i class="bi bi-check-circle me-1"></i>
                    Thank you for your feedback!
                </small>
            `;

            event.target.parentElement.style.display = 'none';
        }
    </script>
</body>
</html>