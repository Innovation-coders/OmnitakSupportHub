@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Base styles */
    .text-center {
        padding: 20px;
        margin: 0 auto;
        max-width: 100%;
        box-sizing: border-box;
        text-align: center;
    }

    .display-4 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
        line-height: 1.3;
        word-break: break-word;
    }

    /* Media queries - note the double @@ */
    @@media (max-width: 375px) {
        .display-4 {
            font-size: 1.6rem;
        }

        .text-center {
            padding: 15px;
        }
    }

    @@media (min-width: 376px) and (max-width: 427px) {
        .display-4 {
            font-size: 2rem;
        }
    }

    @@media (min-width: 428px) and (max-width: 767px) {
        .display-4 {
            font-size: 2.2rem;
        }
    }

    @@media (min-width: 768px) {
        .display-4 {
            font-size: 2.5rem;
        }
    }

    @@media (max-width: 280px) {
        .display-4 {
            font-size: 1.4rem;
        }

        .text-center {
            padding: 12px 4px;
        }
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">Welcome to Omnitak Support Hub</h1>
        <p class="lead">Manage tickets, view reports, and oversee your support team efficiently.</p>
    </div>

    <div class="d-flex justify-content-center mt-4 gap-3 flex-wrap">
        <a class="btn btn-primary btn-lg" href="/Ticket/Create">
            🎫 Create Ticket
        </a>
        <a class="btn btn-outline-secondary btn-lg" href="/Ticket/List">
            📋 View Tickets
        </a>
        <a class="btn btn-success btn-lg" href="/ManagerDashboard">
            🧑‍💼 Manager Dashboard
        </a>
        <a class="btn btn-dark btn-lg" href="/Admin">
            🛠️ Admin Panel
        </a>
    </div>

    <div class="text-center mt-5">
        <img src="~/images/support-team.svg" class="img-fluid" alt="Support Illustration" style="max-height: 300px;" />
    </div>
</div>