@model List<OmnitakSupportHub.Models.Ticket>
@{
    var agents = ViewBag.Agents as List<OmnitakSupportHub.Models.User>;
}
<div class="content-card">
    <div class="card-header">
        <h3 class="card-title"><i class="bi bi-inbox"></i> Unassigned Tickets</h3>
    </div>
    <div class="card-content">
        <table class="modern-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Priority</th>
                    <th>Created By</th>
                    <th>Created</th>
                    <th>Assign</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.Title</td>
                        <td>@ticket.Category?.CategoryName</td>
                        <td>
                            <span class="priority-badge priority-@(ticket.Priority?.PriorityName?.ToLower() ?? "low")">
                                @ticket.Priority?.PriorityName
                            </span>
                        </td>
                        <td>@ticket.CreatedByUser?.FullName</td>
                        <td>@ticket.CreatedAt.ToString("MMM dd, HH:mm")</td>
                        <td>
                            <form asp-controller="Ticket" asp-action="AssignAgent" method="post" style="display:inline;">
                                <input type="hidden" name="ticketId" value="@ticket.TicketID" />
                                <select name="agentId" style="margin-right:8px;">
                                    <option value="0">-- Select Agent --</option>
                                    @foreach (var agent in agents)
                                    {
                                        <option value="@agent.UserID">@agent.FullName</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="bi bi-person-check"></i> Assign
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>