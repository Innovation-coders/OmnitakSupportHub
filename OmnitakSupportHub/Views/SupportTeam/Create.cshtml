@model OmnitakSupportHub.Models.SupportTeam
@{
    ViewData["Title"] = "Create Support Team";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Omnitak Support Hub</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-deep-blue: #0F1419;
            --accent-electric: #00E5FF;
            --accent-purple: #7B2CBF;
            --surface-card: #242424;
            --text-primary: #FFFFFF;
            --text-secondary: rgba(255,255,255,0.7);
            --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
            --shadow-card: 0 8px 32px rgba(0,0,0,0.3);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--primary-deep-blue);
            color: var(--text-primary);
            min-height: 100vh;
        }

        .main-content {
            margin: 40px auto;
            max-width: 600px;
            padding: 32px;
            background: var(--surface-card);
            border-radius: 20px;
            box-shadow: var(--shadow-card);
        }

        .header {
            margin-bottom: 32px;
            text-align: center;
        }

            .header h1 {
                font-size: 28px;
                font-weight: 800;
                background: var(--gradient-accent);
                background-clip: text;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 8px;
            display: block;
        }

        input, textarea {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.2);
            background: var(--surface-card);
            color: var(--text-primary);
        }

        .btn-primary {
            background: var(--gradient-accent);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            box-shadow: 0 0 20px rgba(0,229,255,0.2);
            transition: all 0.3s;
        }

            .btn-primary:hover {
                box-shadow: 0 0 40px rgba(0,229,255,0.4);
                transform: translateY(-2px);
            }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="header">
            <h1><i class="bi bi-plus-circle"></i> Create Support Team</h1>
        </div>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="TeamName"></label>
                <input asp-for="TeamName" />
            </div>
            <div class="form-group">
                <label asp-for="Specialization"></label>
                <input asp-for="Specialization" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Create</button>
        </form>
    </div>
</body>
</html>