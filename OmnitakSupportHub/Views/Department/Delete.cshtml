@model OmnitakSupportHub.Models.Department
@{
    ViewData["Title"] = "Delete Department";
}
<style>
    :root {
        --primary-deep-blue: #0F1419;
        --primary-navy: #1A237E;
        --accent-electric: #00E5FF;
        --accent-purple: #7B2CBF;
        --accent-gold: #FFB300;
        --surface-card: #242424;
        --text-primary: #FFFFFF;
        --text-secondary: rgba(255,255,255,0.7);
        --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
        --shadow-card: 0 8px 32px rgba(0,229,255,0.08);
        --border-glow: rgba(0,229,255,0.3);
    }
    body {
        background: var(--gradient-accent);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
    }
    .admin-card {
        max-width: 600px;
        margin: 40px auto;
        background: var(--surface-card);
        border-radius: 24px;
        box-shadow: var(--shadow-card);
        padding: 2.5rem 2rem;
        color: var(--text-primary);
    }
    .form-title {
        font-size: 2rem;
        font-weight: 800;
        background: var(--gradient-accent);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    .form-actions {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 30px;
    }
    .btn {
        display: inline-block;
        padding: 12px 24px;
        font-size: 1rem;
        border-radius: 12px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        text-decoration: none;
        transition: background 0.2s;
        box-shadow: var(--shadow-card);
    }
    .btn-danger {
        background: #F44336;
        color: #fff;
    }
    .btn-danger:hover {
        background: var(--accent-gold);
        color: var(--primary-navy);
    }
    .btn-secondary {
        background: var(--surface-card);
        color: var(--text-secondary);
        border: 2px solid var(--border-glow);
    }
    .btn-secondary:hover {
        background: var(--accent-electric);
        color: #fff;
    }
    .delete-warning {
        background: rgba(244,67,54,0.08);
        color: #F44336;
        border-left: 5px solid #F44336;
        margin-bottom: 1rem;
        padding: 1rem;
        border-radius: 12px;
        text-align: center;
        font-weight: 600;
    }
</style>
<div class="admin-card">
    <div class="form-title">Delete Department</div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DepartmentId" />
        <div class="delete-warning">
            Are you sure you want to delete <strong>@Model.DepartmentName</strong>?
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>