@model OmnitakSupportHub.Models.ViewModels.KnowledgeBaseViewModel
@{
    ViewData["Title"] = "Knowledge Base";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Support Agent</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --primary-blue: #2563eb;
            --success-green: #16a34a;
            --warning-orange: #ea580c;
            --danger-red: #dc2626;
            --info-cyan: #0891b2;
            --light-gray: #f8fafc;
            --medium-gray: #64748b;
            --dark-gray: #334155;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --hover-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        body {
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .kb-header {
            background: linear-gradient(135deg, var(--primary-blue) 0%, #1d4ed8 100%);
            color: white;
            padding: 2rem 0;
            box-shadow: var(--card-shadow);
        }

        .search-hero {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            padding: 2rem;
            margin: 2rem 0;
        }

        .search-box-hero {
            position: relative;
        }

            .search-box-hero input {
                padding: 1rem 1rem 1rem 3rem;
                border-radius: 15px;
                border: none;
                box-shadow: var(--card-shadow);
                font-size: 1.1rem;
            }

            .search-box-hero .search-icon {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: var(--medium-gray);
                font-size: 1.2rem;
            }

        .kb-card {
            background: white;
            border-radius: 16px;
            box-shadow: var(--card-shadow);
            margin-bottom: 1.5rem;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .kb-card:hover {
                transform: translateY(-2px);
                box-shadow: var(--hover-shadow);
            }

        .card-header-custom {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            padding: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .article-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: var(--card-shadow);
            transition: all 0.2s ease;
            border-left: 4px solid var(--primary-blue);
        }

            .article-card:hover {
                transform: translateY(-1px);
                box-shadow: var(--hover-shadow);
                border-left-color: var(--success-green);
            }

        .article-title {
            color: var(--dark-gray);
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
            display: block;
        }

            .article-title:hover {
                color: var(--primary-blue);
            }

        .article-excerpt {
            color: var(--medium-gray);
            font-size: 0.9rem;
            line-height: 1.4;
            margin-bottom: 1rem;
        }

        .article-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.85rem;
            color: var(--medium-gray);
        }

        .category-badge {
            background: rgba(37, 99, 235, 0.1);
            color: var(--primary-blue);
            padding: 0.25rem 0.75rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .btn-action {
            border: none;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary-custom {
            background: var(--primary-blue);
            color: white;
        }

            .btn-primary-custom:hover {
                background: #1d4ed8;
                color: white;
            }

        .btn-success-custom {
            background: var(--success-green);
            color: white;
        }

            .btn-success-custom:hover {
                background: #15803d;
                color: white;
            }

        .btn-outline-custom {
            border: 2px solid var(--primary-blue);
            color: var(--primary-blue);
            background: transparent;
        }

            .btn-outline-custom:hover {
                background: var(--primary-blue);
                color: white;
            }

        .filter-section {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
            margin-bottom: 2rem;
        }

        .quick-categories {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            margin: 1rem 0;
        }

        .category-chip {
            background: rgba(37, 99, 235, 0.1);
            color: var(--primary-blue);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }

            .category-chip:hover {
                background: var(--primary-blue);
                color: white;
            }

            .category-chip.active {
                background: var(--primary-blue);
                color: white;
            }

        .stats-row {
            display: flex;
            gap: 2rem;
            margin: 1rem 0;
            font-size: 0.9rem;
            color: var(--medium-gray);
        }

        .no-results {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--medium-gray);
        }

        .quick-search-results {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border-radius: 12px;
            box-shadow: var(--hover-shadow);
            max-height: 400px;
            overflow-y: auto;
            z-index: 1000;
            display: none;
        }

        .quick-search-item {
            padding: 1rem;
            border-bottom: 1px solid #f1f5f9;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

            .quick-search-item:hover {
                background: var(--light-gray);
            }

            .quick-search-item:last-child {
                border-bottom: none;
            }

        .search-item-title {
            font-weight: 600;
            color: var(--dark-gray);
            margin-bottom: 0.25rem;
        }

        .search-item-excerpt {
            font-size: 0.85rem;
            color: var(--medium-gray);
            margin-bottom: 0.25rem;
        }

        .search-item-meta {
            font-size: 0.75rem;
            color: var(--medium-gray);
        }

        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@media (max-width: 768px) {
            .search-hero

        {
            padding: 1.5rem;
            margin: 1rem 0;
        }

        .quick-categories {
            gap: 0.5rem;
        }

        .category-chip {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
        }

        .stats-row {
            flex-direction: column;
            gap: 0.5rem;
        }

        }
    </style>
</head>
<body>
    <!-- Knowledge Base Header -->
    <div class="kb-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-2">
                        <i class="bi bi-journal-text me-2"></i>
                        Knowledge Base
                    </h1>
                    <p class="mb-0 opacity-75">Find answers, solutions, and best practices</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="/AgentDashboard" class="btn btn-light me-2">
                        <i class="bi bi-arrow-left me-1"></i>
                        Dashboard
                    </a>
                    <a href="/AgentDashboard/CreateArticle" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i>
                        New Article
                    </a>
                </div>
            </div>

            <!-- Hero Search Section -->
            <div class="search-hero">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h3 class="mb-3">What can we help you find?</h3>
                        <form method="get" asp-action="KnowledgeBase">
                            <div class="search-box-hero position-relative">
                                <i class="bi bi-search search-icon"></i>
                                <input type="text"
                                       name="searchTerm"
                                       value="@Model.SearchTerm"
                                       class="form-control form-control-lg"
                                       placeholder="Search articles, solutions, procedures..."
                                       id="mainSearchInput">
                                <input type="hidden" name="categoryId" value="@Model.SelectedCategoryId" />
                                <input type="hidden" name="sortBy" value="@Model.SortBy" />

                                <!-- Quick Search Results -->
                                <div class="quick-search-results" id="quickSearchResults"></div>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-4 text-center">
                        <div class="stats-overview">
                            <h4 class="mb-1">@Model.TotalArticles</h4>
                            <p class="mb-2">Total Articles</p>
                            <small class="opacity-75">
                                <i class="bi bi-person me-1"></i>
                                Welcome back, @Model.AgentName
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success fade-in">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger fade-in">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Filter and Category Section -->
        <div class="filter-section fade-in">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="mb-3">
                        <i class="bi bi-funnel me-2"></i>
                        Browse by Category
                    </h5>
                    <div class="quick-categories">
                        <a href="/AgentDashboard/KnowledgeBase"
                           class="category-chip @(Model.SelectedCategoryId == null ? "active" : "")">
                            <i class="bi bi-grid me-1"></i>
                            All Articles (@Model.TotalArticles)
                        </a>
                        @foreach (var category in Model.Categories)
                        {
                            var count = Model.CategoryCounts.ContainsKey(category.Text) ? Model.CategoryCounts[category.Text] : 0;
                            <a href="/AgentDashboard/KnowledgeBase?categoryId=@category.Value"
                               class="category-chip @(category.Selected ? "active" : "")">
                                @category.Text (@count)
                            </a>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <form method="get" asp-action="KnowledgeBase" class="d-flex gap-2">
                        <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />
                        <input type="hidden" name="categoryId" value="@Model.SelectedCategoryId" />
                        <select name="sortBy" class="form-select" onchange="this.form.submit()">
                            @foreach (var option in Model.SortOptions)
                            {
                                <option value="@option.Value" selected="@(option.Value == Model.SortBy)">@option.Text</option>
                            }
                        </select>
                    </form>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.SelectedCategoryId.HasValue)
            {
                <div class="stats-row">
                    <span>
                        <i class="bi bi-info-circle me-1"></i>
                        Showing @Model.ArticlesInCategory result(s)
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <span>for "<strong>@Model.SearchTerm</strong>"</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.SelectedCategoryName))
                        {
                            <span>in <strong>@Model.SelectedCategoryName</strong></span>
                        }
                    </span>
                    <a href="/AgentDashboard/KnowledgeBase" class="text-primary">
                        <i class="bi bi-x-circle me-1"></i>Clear filters
                    </a>
                </div>
            }
        </div>

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Search Results / All Articles -->
                <div class="kb-card fade-in">
                    <div class="card-header-custom">
                        <h5 class="mb-0">
                            <i class="bi bi-collection me-2"></i>
                            @if (!string.IsNullOrEmpty(Model.SearchTerm))
                            {
                                <span>Search Results</span>
                            }
                            else if (!string.IsNullOrEmpty(Model.SelectedCategoryName))
                            {
                                <span>@Model.SelectedCategoryName Articles</span>
                            }
                            else
                            {
                                <span>All Articles</span>
                            }
                        </h5>
                    </div>

                    @if (Model.Articles.Any())
                    {
                        <div class="p-3">
                            @foreach (var article in Model.Articles)
                            {
                                <div class="article-card">
                                    <a href="/AgentDashboard/ArticleDetails/@article.ArticleID" class="article-title">
                                        @article.Title
                                    </a>
                                    <div class="article-excerpt">
                                        @(article.Content.Length > 200 ? article.Content.Substring(0, 200) + "..." : article.Content)
                                    </div>
                                    <div class="article-meta">
                                        <div>
                                            <span class="category-badge">@article.Category?.CategoryName</span>
                                            <small class="ms-2">
                                                <i class="bi bi-person me-1"></i>@article.CreatedByUser?.FullName
                                            </small>
                                        </div>
                                        <small>
                                            <i class="bi bi-calendar me-1"></i>@article.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="no-results">
                            <i class="bi bi-search display-1 mb-3"></i>
                            <h5>No articles found</h5>
                            <p>
                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                {
                                    <span>No articles match your search for "<strong>@Model.SearchTerm</strong>"</span>
                                }
                                else if (Model.SelectedCategoryId.HasValue)
                                {
                                    <span>No articles in this category yet</span>
                                }
                                else
                                {
                                    <span>No articles available</span>
                                }
                            </p>
                            <div class="mt-3">
                                <a href="/AgentDashboard/KnowledgeBase" class="btn-action btn-outline-custom me-2">
                                    <i class="bi bi-arrow-left"></i>
                                    View All Articles
                                </a>
                                <a href="/AgentDashboard/CreateArticle" class="btn-action btn-success-custom">
                                    <i class="bi bi-plus-circle"></i>
                                    Create Article
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Popular Articles -->
                @if (Model.PopularArticles.Any())
                {
                    <div class="kb-card fade-in">
                        <div class="card-header-custom">
                            <h6 class="mb-0">
                                <i class="bi bi-fire me-2"></i>
                                Popular Articles
                            </h6>
                        </div>
                        <div class="p-3">
                            @foreach (var article in Model.PopularArticles.Take(5))
                            {
                                <div class="d-flex align-items-start mb-3">
                                    <div class="flex-grow-1">
                                        <a href="/AgentDashboard/ArticleDetails/@article.ArticleID"
                                           class="text-decoration-none fw-bold text-dark small">
                                            @article.Title
                                        </a>
                                        <div>
                                            <small class="text-muted">@article.Category?.CategoryName</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Recent Articles -->
                @if (Model.RecentArticles.Any())
                {
                    <div class="kb-card fade-in">
                        <div class="card-header-custom">
                            <h6 class="mb-0">
                                <i class="bi bi-clock me-2"></i>
                                Recently Added
                            </h6>
                        </div>
                        <div class="p-3">
                            @foreach (var article in Model.RecentArticles.Take(5))
                            {
                                <div class="d-flex align-items-start mb-3">
                                    <div class="flex-grow-1">
                                        <a href="/AgentDashboard/ArticleDetails/@article.ArticleID"
                                           class="text-decoration-none fw-bold text-dark small">
                                            @article.Title
                                        </a>
                                        <div>
                                            <small class="text-muted">
                                                @article.CreatedAt.ToString("MMM dd") • @article.CreatedByUser?.FullName
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Quick Actions -->
                <div class="kb-card fade-in">
                    <div class="card-header-custom">
                        <h6 class="mb-0">
                            <i class="bi bi-lightning me-2"></i>
                            Quick Actions
                        </h6>
                    </div>
                    <div class="p-3">
                        <div class="d-grid gap-2">
                            <a href="/AgentDashboard/CreateArticle" class="btn-action btn-success-custom">
                                <i class="bi bi-plus-circle"></i>
                                Create New Article
                            </a>
                            <a href="/AgentDashboard" class="btn-action btn-outline-custom">
                                <i class="bi bi-house"></i>
                                Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Quick search functionality
        let searchTimeout;
        const searchInput = document.getElementById('mainSearchInput');
        const searchResults = document.getElementById('quickSearchResults');

        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            const query = this.value.trim();

            if (query.length < 2) {
                searchResults.style.display = 'none';
                return;
            }

            searchTimeout = setTimeout(() => {
                fetch(`/AgentDashboard/QuickSearch?query=${encodeURIComponent(query)}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.results && data.results.length > 0) {
                            displayQuickResults(data.results);
                        } else {
                            searchResults.style.display = 'none';
                        }
                    })
                    .catch(error => {
                        console.error('Search error:', error);
                        searchResults.style.display = 'none';
                    });
            }, 300);
        });

        function displayQuickResults(results) {
            const html = results.map(result => `
                <div class="quick-search-item" onclick="window.location.href='/AgentDashboard/ArticleDetails/${result.articleId}'">
                    <div class="search-item-title">${result.title}</div>
                    <div class="search-item-excerpt">${result.excerpt}</div>
                    <div class="search-item-meta">
                        <span class="category-badge">${result.categoryName}</span>
                        <small class="ms-2">${result.createdBy} • ${result.createdAt}</small>
                    </div>
                </div>
            `).join('');

            searchResults.innerHTML = html;
            searchResults.style.display = 'block';
        }

        // Hide search results when clicking outside
        document.addEventListener('click', function(event) {
            if (!searchInput.contains(event.target) && !searchResults.contains(event.target)) {
                searchResults.style.display = 'none';
            }
        });

        // Show search results when focusing on input (if there are results)
        searchInput.addEventListener('focus', function() {
            if (searchResults.innerHTML.trim() !== '') {
                searchResults.style.display = 'block';
            }
        });

       
        searchInput.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                searchResults.style.display = 'none';
                this.closest('form').submit();
            }
        });
    </script>
</body>
</html>