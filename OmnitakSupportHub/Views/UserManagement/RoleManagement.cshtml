@model List<OmnitakSupportHub.Models.Role>
@{
    ViewData["Title"] = "Role Management";
}
<style>
    .admin-card {
        max-width: 1200px;
        margin: 40px auto;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e4e8 100%);
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(16,185,129,0.08), 0 0 40px rgba(16,185,129,0.08);
        padding: 2.5rem 2rem;
    }

    .admin-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2.2rem;
        font-weight: 800;
        color: #10b981;
        margin: 0;
        letter-spacing: 1px;
    }

    .btn-back {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: #fff;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border: none;
        box-shadow: 0 2px 12px rgba(16,185,129,0.12);
        text-decoration: none;
        transition: background 0.2s;
    }

        .btn-back:hover {
            background: #FFB300;
            color: #1A237E;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        padding: 25px;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 4px 16px rgba(16,185,129,0.08);
    }

    .roles-grid {
        display: grid;
        gap: 25px;
        margin-top: 30px;
    }

    .role-card {
        background: #fff;
        border: 2px solid #e2e8f0;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 4px 16px rgba(16,185,129,0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .role-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 32px rgba(16,185,129,0.12);
            border-color: #10b981;
        }

    .role-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
    }

    .role-info h3 {
        margin: 0 0 8px 0;
        color: #10b981;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .role-info p {
        margin: 0;
        color: #64748b;
        font-size: 1rem;
        line-height: 1.5;
    }

    .role-badges {
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: flex-end;
    }

    .system-badge {
        background: linear-gradient(135deg, #065f46, #059669);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .custom-badge {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .permissions-section {
        margin: 25px 0;
    }

    .permissions-title {
        color: #0f172a;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 15px;
        border-bottom: 1px solid #e2e8f0;
        padding-bottom: 8px;
    }

    .permissions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 12px;
    }

    .permission-item {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        background: #f8fafc;
        border-radius: 8px;
        font-size: 0.9rem;
    }

    .permission-enabled {
        color: #10b981;
    }

    .permission-disabled {
        color: #94a3b8;
    }

    .role-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 25px;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
    }

    .alert {
        margin-bottom: 25px;
        padding: 15px 20px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-left: 5px solid #10b981;
        background: rgba(16,185,129,0.1);
        color: #10b981;
        box-shadow: 0 2px 8px rgba(16,185,129,0.05);
    }
</style>
<div class="admin-card">
    <div class="admin-header">
        <span class="admin-title">Role Management</span>
        <a asp-controller="AdminDashboard" asp-action="Index" class="btn-back">← Admin Dashboard</a>
    </div>
    <div class="stats-grid">
        <div class="stat-card">
            <h3>@Model.Count</h3>
            <p>Total Roles</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Count(r => r.IsSystemRole)</h3>
            <p>System Roles</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Count(r => !r.IsSystemRole)</h3>
            <p>Custom Roles</p>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert">@TempData["SuccessMessage"]</div>
    }
    <div class="roles-grid">
        @if (Model.Any())
        {
            @foreach (var role in Model)
            {
                <div class="role-card">
                    <div class="role-header">
                        <div class="role-info">
                            <h3>@role.RoleName</h3>
                            <p>@(string.IsNullOrEmpty(role.Description) ? "No description provided" : role.Description)</p>
                        </div>
                        <div class="role-badges">
                            @if (role.IsSystemRole)
                            {
                                <span class="system-badge">
                                    <i class="fas fa-shield-alt"></i> System
                                </span>
                            }
                            else
                            {
                                <span class="custom-badge">
                                    <i class="fas fa-user-cog"></i> Custom
                                </span>
                            }
                        </div>
                    </div>
                    <div class="permissions-section">
                        <h4 class="permissions-title">
                            <i class="fas fa-key"></i> Permissions
                        </h4>
                        <div class="permissions-grid">
                            <div class="permission-item @(role.CanApproveUsers ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanApproveUsers ? "fa-check" : "fa-times")"></i>
                                <span>Approve Users</span>
                            </div>
                            <div class="permission-item @(role.CanManageTickets ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanManageTickets ? "fa-check" : "fa-times")"></i>
                                <span>Manage Tickets</span>
                            </div>
                            <div class="permission-item @(role.CanViewAllTickets ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanViewAllTickets ? "fa-check" : "fa-times")"></i>
                                <span>View All Tickets</span>
                            </div>
                            <div class="permission-item @(role.CanManageKnowledgeBase ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanManageKnowledgeBase ? "fa-check" : "fa-times")"></i>
                                <span>Manage Knowledge Base</span>
                            </div>
                            <div class="permission-item @(role.CanViewReports ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanViewReports ? "fa-check" : "fa-times")"></i>
                                <span>View Reports</span>
                            </div>
                            <div class="permission-item @(role.CanManageTeams ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanManageTeams ? "fa-check" : "fa-times")"></i>
                                <span>Manage Teams</span>
                            </div>
                        </div>
                    </div>
                    <div class="role-actions">
                        <a asp-action="EditRole" asp-route-id="@role.RoleID" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        @if (!role.IsSystemRole)
                        {
                            <form asp-action="DeleteRole" asp-route-id="@role.RoleID" method="post" style="display: inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this role? This action cannot be undone.');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled title="System roles cannot be deleted">
                                <i class="fas fa-lock"></i> Protected
                            </button>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert">
                <i class="fas fa-info-circle"></i> No roles found in the system.
            </div>
        }
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>