@model OmnitakSupportHub.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Omnitak Support Hub";
}



<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: linear-gradient(135deg, #f0f2f5 0%, #e0e4e8 100%);
        overflow: auto;
    }

    .landing-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        width: 90%;
        max-width: 900px;
        margin: 2rem auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        animation: fadeIn 1s ease-in;
    }

    .left-section,
    .right-section {
        flex: 1 1 50%;
        min-width: 280px;
        box-sizing: border-box;
    }

    .left-section {
        background: linear-gradient(135deg, #2e7d32 0%, #388e3c 100%);
        color: white;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        transition: transform 0.3s ease, background 0.5s ease;
    }

        .left-section:hover {
            transform: scale(1.02);
            background: linear-gradient(135deg, #1b5e20 0%, #2e7d32 100%);
        }

        .left-section h1 {
            font-size: 2.5rem;
            margin: 0 0 1rem;
        }

    .right-section {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: rgba(255, 255, 255, 0.95);
    }

    .logo {
        width: 60px;
        height: 60px;
        background-color: #2e7d32;
        border-radius: 50%;
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5rem;
        color: white;
    }

    h2 {
        color: #333;
        font-size: 1.3rem;
        margin-bottom: 1.5rem;
        text-align: center;
        animation: fadeIn 1s ease-out;
    }

    input:focus {
        border-color: #2e7d32;
        outline: none;
        transform: scale(1.02);
    }

    .btn {
        padding: 12px;
        background-color: #2e7d32 !important;
        color: white !important;
        border: none;
        cursor: pointer;
        border-radius: 4px;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .btn:hover {
            background-color: #1b5e20 !important;
            transform: translateY(-2px);
        }

        .btn::after {
            content: '';
            position: absolute;
            width: 0;
            height: 100%;
            background: rgba(255, 255, 255, 0.15);
            top: 0;
            left: 0;
            transition: width 0.3s ease;
        }

        .btn:hover::after {
            width: 100%;
        }

    .alert {
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
        animation: fadeInOut 5s ease-in-out forwards;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    @@keyframes fadeInOut {
        0%

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    10%, 90% {
        opacity: 1;
        transform: translateY(0);
    }

    100% {
        opacity: 0;
        transform: translateY(-20px);
    }

    }

    @@keyframes fadeInUp {
        0%

    {
        opacity: 0;
        transform: translateY(40px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 768px) {
        .landing-container

    {
        flex-direction: column;
    }

    .left-section, .right-section {
        flex: 1 1 100%;
        width: 100%;
        padding: 1.5rem;
    }

        .left-section h1 {
            font-size: 2rem;
        }

    h2 {
        font-size: 1.1rem;
    }

    .logo {
        width: 50px;
        height: 50px;
        font-size: 1.2rem;
    }

    }

</style>

<div class="body">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" style="position: fixed; top: 20px; right: 20px; z-index: 1000;">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="landing-container">
        <div class="left-section">
            <h1>Welcome<br>to<br>Omnitak<br>Support<br>Hub</h1>
            <p>
                Streamline your IT support with our advanced system designed to keep your business running smoothly.
                Log in to access powerful tools and resources.
            </p>
        </div>

        <div class="right-section">
            <div class="logo">O</div>
            <h2>IT Support System</h2>
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Enter your company email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label small">Remember me</label>
                    </div>
                    <a asp-action="ForgotPassword" class="small">Forgot Password?</a>
                </div>

                <button type="submit" class="btn w-100">Sign In</button>

                <div class="text-center mt-3 small">
                    Don’t have an account? <a asp-action="Register">Create one here</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
            localStorage.setItem("theme", document.body.classList.contains("dark-mode") ? "dark" : "light");
        }

        window.addEventListener("DOMContentLoaded", () => {
            if (localStorage.getItem("theme") === "dark") {
                document.body.classList.add("dark-mode");
            }
        });
    </script>
}
