@model OmnitakSupportHub.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Enterprise Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Omnitak Support Hub</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-deep-blue: #0F1419;
            --primary-navy: #1A237E;
            --accent-electric: #00E5FF;
            --accent-purple: #7B2CBF;
            --accent-gold: #FFB300;
            --surface-dark: #121212;
            --surface-elevated: #1E1E1E;
            --surface-glass: rgba(255, 255, 255, 0.05);
            --text-primary: #FFFFFF;
            --text-secondary: rgba(255, 255, 255, 0.7);
            --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
            --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
            --gradient-button: linear-gradient(135deg, #00E5FF 0%, #1A237E 100%);
            --shadow-glow: 0 0 40px rgba(0, 229, 255, 0.3);
            --shadow-deep: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
            --error-color: #FF5252;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--primary-deep-blue);
            overflow-x: hidden;
            overflow-y: auto;
            position: relative;
            min-height: 100vh;
        }

        /* 🎯 MICROSOFT FLUENT DESIGN - NAVIGATION HEADER */
        .navigation-header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1001;
            background: rgba(15, 20, 25, 0.85);
            backdrop-filter: blur(40px);
            border-bottom: 1px solid rgba(0, 229, 255, 0.1);
            padding: 16px 0;
            transition: all 0.3s ease;
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 32px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Enhanced Brand Logo Section */
        .nav-brand {
            display: flex;
            align-items: center;
            gap: 16px;
            transition: all 0.3s ease;
        }

        .nav-logo {
            width: 48px;
            height: 48px;
            background: var(--gradient-accent);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            font-weight: 800;
            color: white;
            box-shadow: 0 4px 20px rgba(0, 229, 255, 0.3);
            transition: all 0.3s ease;
        }

            .nav-logo:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 30px rgba(0, 229, 255, 0.5);
            }

        .nav-brand-text {
            display: flex;
            flex-direction: column;
        }

        .nav-brand-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-primary);
            background: var(--gradient-accent);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 2px;
        }

        .nav-brand-subtitle {
            font-size: 11px;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
        }

        /* Microsoft-Style Action Buttons */
        .nav-actions {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        /* Primary Home Button - Microsoft Style */
        .home-button {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 20px;
            background: linear-gradient(135deg, rgba(0, 229, 255, 0.15), rgba(123, 44, 191, 0.15));
            border: 1px solid rgba(0, 229, 255, 0.3);
            border-radius: 8px;
            color: var(--text-primary);
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .home-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
                transition: left 0.5s ease;
            }

            .home-button:hover::before {
                left: 100%;
            }

            .home-button:hover {
                background: linear-gradient(135deg, rgba(0, 229, 255, 0.25), rgba(123, 44, 191, 0.25));
                border-color: rgba(0, 229, 255, 0.5);
                transform: translateY(-1px);
                box-shadow: 0 4px 20px rgba(0, 229, 255, 0.2);
                color: var(--text-primary);
            }

        .home-icon {
            font-size: 16px;
            background: var(--gradient-accent);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: transform 0.3s ease;
        }

        .home-button:hover .home-icon {
            transform: scale(1.1);
        }

        /* 🎯 FUNCTIONAL HELP BUTTON - Enterprise Grade */
        .help-button {
            padding: 12px 16px;
            background: linear-gradient(135deg, rgba(255, 179, 0, 0.15), rgba(255, 152, 0, 0.15));
            border: 1px solid rgba(255, 179, 0, 0.3);
            border-radius: 8px;
            color: var(--accent-gold);
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            position: relative;
            cursor: pointer;
        }

            .help-button:hover {
                background: linear-gradient(135deg, rgba(255, 179, 0, 0.25), rgba(255, 152, 0, 0.25));
                border-color: rgba(255, 179, 0, 0.5);
                color: var(--accent-gold);
                transform: translateY(-1px);
                box-shadow: 0 4px 20px rgba(255, 179, 0, 0.2);
            }

        .help-icon {
            font-size: 16px;
            transition: transform 0.3s ease;
        }

        .help-button:hover .help-icon {
            transform: scale(1.1);
        }

        /* 🎯 HELP PANEL - Professional Enterprise Design */
        .help-panel {
            position: fixed;
            top: 80px;
            right: 32px;
            width: 380px;
            max-height: calc(100vh - 120px);
            background: linear-gradient(135deg, #1E1E1E 0%, #242424 100%);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(0, 229, 255, 0.2);
            border-radius: 16px;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.3);
            z-index: 1002;
            transform: translateX(400px);
            opacity: 0;
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            overflow: hidden;
        }

            .help-panel.active {
                transform: translateX(0);
                opacity: 1;
            }

        .help-header {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .help-title {
            font-size: 18px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .help-close {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .help-close:hover {
                background: rgba(255, 255, 255, 0.3);
                transform: scale(1.1);
            }

        .help-content {
            padding: 24px;
            max-height: calc(100vh - 200px);
            overflow-y: auto;
        }

        .help-section {
            margin-bottom: 24px;
        }

        .help-section-title {
            font-size: 16px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .help-item {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 8px;
            transition: all 0.3s ease;
            cursor: pointer;
            border: 1px solid transparent;
        }

            .help-item:hover {
                background: rgba(0, 229, 255, 0.1);
                border-color: rgba(0, 229, 255, 0.2);
            }

        .help-item-icon {
            font-size: 18px;
            color: var(--accent-electric);
            flex-shrink: 0;
            margin-top: 2px;
        }

        .help-item-content {
            flex: 1;
        }

        .help-item-title {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 4px;
        }

        .help-item-description {
            font-size: 13px;
            color: var(--text-secondary);
            line-height: 1.4;
        }

        .help-footer {
            background: rgba(0, 0, 0, 0.3);
            padding: 16px 24px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .help-contact {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--text-secondary);
            font-size: 13px;
        }

        .help-contact-icon {
            color: var(--accent-electric);
        }

        /* Breadcrumb Navigation */
        .breadcrumb-nav {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: rgba(15, 20, 25, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding: 12px 0;
            z-index: 1000;
        }

        .breadcrumb-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 32px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 13px;
            color: var(--text-secondary);
        }

        .breadcrumb-link {
            color: var(--accent-electric);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .breadcrumb-link:hover {
                color: var(--accent-gold);
            }

        .breadcrumb-separator {
            color: rgba(255, 255, 255, 0.3);
            margin: 0 4px;
        }

        /* Background Container */
        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: var(--gradient-primary);
        }

        .floating-orbs {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .orb {
            position: absolute;
            border-radius: 50%;
            background: var(--gradient-accent);
            opacity: 0.1;
            filter: blur(1px);
            animation: float 20s infinite linear;
        }

            .orb:nth-child(1) {
                width: 300px;
                height: 300px;
                top: -150px;
                left: -150px;
                animation-delay: 0s;
            }

            .orb:nth-child(2) {
                width: 200px;
                height: 200px;
                top: 50%;
                right: -100px;
                animation-delay: -7s;
            }

            .orb:nth-child(3) {
                width: 150px;
                height: 150px;
                bottom: -75px;
                left: 30%;
                animation-delay: -14s;
            }

        @@keyframes float {
            0%

        {
            transform: translateY(0) rotate(0deg);
        }

        33% {
            transform: translateY(-30px) rotate(120deg);
        }

        66% {
            transform: translateY(15px) rotate(240deg);
        }

        100% {
            transform: translateY(0) rotate(360deg);
        }

        }

        /* Login Layout - Adjusted for Header */
        .login-container {
            display: flex;
            min-height: 100vh;
            height: auto;
            position: relative;
            z-index: 10;
            padding-top: 120px;
        }

        /* Left Panel - Brand */
        .brand-panel {
            flex: 1.2;
            padding: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.1);
            min-height: calc(100vh - 120px);
        }

        .brand-content {
            max-width: 500px;
            animation: slideInLeft 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .company-logo {
            width: 80px;
            height: 80px;
            background: var(--gradient-button);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            font-weight: 800;
            color: white;
            margin-bottom: 40px;
            box-shadow: var(--shadow-glow);
            animation: pulse 3s infinite;
        }

        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        }

        .brand-title {
            font-size: 48px;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 16px;
            background: var(--gradient-accent);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1.1;
        }

        .brand-subtitle {
            font-size: 20px;
            color: var(--text-secondary);
            margin-bottom: 48px;
            line-height: 1.6;
        }

        .features-list {
            list-style: none;
        }

        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 24px;
            padding: 20px;
            background: var(--surface-glass);
            border-radius: 16px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.4s ease;
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            background: var(--gradient-button);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 20px;
            font-size: 20px;
            color: white;
            flex-shrink: 0;
        }

        .feature-text {
            font-size: 16px;
            color: var(--text-primary);
            font-weight: 500;
        }

        /* Right Panel - Login Form */
        .form-panel {
            flex: 1;
            padding: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(20px);
            min-height: calc(100vh - 120px);
            height: auto;
        }

        .login-form {
            width: 100%;
            max-width: 400px;
            animation: slideInRight 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            padding-bottom: 2rem;
        }

        .login-card {
            width: 100%;
            max-width: 420px;
            margin: 0 auto;
            background: var(--surface-elevated, #1E1E1E);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.35), 0 0 40px rgba(0,229,255,0.08);
            border: 1px solid rgba(255,255,255,0.08);
            padding: 40px 32px 32px 32px;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            position: relative;
            z-index: 2;
            backdrop-filter: blur(8px);
        }

        .form-header {
            text-align: center;
            margin-bottom: 48px;
        }

        .form-title {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 12px;
        }

        .form-subtitle {
            font-size: 16px;
            color: var(--text-secondary);
        }

        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            color: var(--text-primary);
            font-size: 16px;
            font-family: 'Inter', sans-serif;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

            .form-control:focus {
                outline: none;
                border-color: var(--accent-electric);
                background: rgba(255, 255, 255, 0.08);
                box-shadow: 0 0 0 3px rgba(0, 229, 255, 0.1);
            }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.4);
            }

        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }

        .form-check {
            display: flex;
            align-items: center;
        }

        .form-check-input {
            margin-right: 8px;
            transform: scale(1.2);
            accent-color: var(--accent-electric);
        }

        .form-check-label {
            font-size: 14px;
            color: var(--text-secondary);
            cursor: pointer;
        }

        .forgot-password-link {
            color: var(--accent-electric);
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .forgot-password-link:hover {
                color: var(--accent-gold);
                text-shadow: 0 0 8px rgba(255, 179, 0, 0.5);
            }

        .btn {
            width: 100%;
            padding: 16px;
            background: var(--gradient-button);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            font-family: 'Inter', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: var(--shadow-deep);
            margin-bottom: 2rem;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-glow), var(--shadow-deep);
            }

        .divider {
            display: flex;
            align-items: center;
            margin: 32px 0;
        }

        .divider-line {
            flex: 1;
            height: 1px;
            background: rgba(255, 255, 255, 0.1);
        }

        .divider-text {
            margin: 0 16px;
            font-size: 14px;
            color: var(--text-secondary);
        }

        .register-link {
            text-align: center;
            margin-top: 24px;
            padding-bottom: 3rem;
            display: block !important;
            visibility: visible !important;
        }

            .register-link a {
                color: var(--accent-electric);
                text-decoration: none;
                font-weight: 500;
                transition: all 0.3s ease;
                padding: 0.5rem;
                display: inline-block;
            }

                .register-link a:hover {
                    color: var(--accent-gold);
                    text-shadow: 0 0 8px rgba(255, 179, 0, 0.5);
                }

        .text-danger {
            color: var(--error-color) !important;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }

        .validation-summary-errors {
            background: rgba(255, 82, 82, 0.1);
            border: 1px solid var(--error-color);
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
            color: var(--error-color);
        }

            .validation-summary-errors ul {
                margin: 0;
                list-style: none;
            }

        /* Animations */
        @@keyframes slideInLeft {
            from

        {
            opacity: 0;
            transform: translateX(-50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        @@keyframes slideInRight {
            from

        {
            opacity: 0;
            transform: translateX(50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        /* Mobile Responsiveness */
        @@media (max-width: 1024px) {
            .nav-container

        {
            padding: 0 20px;
        }

        .nav-brand-text {
            display: none;
        }

        .help-panel {
            right: 16px;
            width: calc(100vw - 32px);
            max-width: 360px;
        }

        .login-container {
            flex-direction: column;
            padding-top: 80px;
        }

        .brand-panel {
            flex: none;
            padding: 40px;
            min-height: 50vh;
        }

        .form-panel {
            flex: none;
            padding: 40px;
            min-height: 50vh;
        }

        .brand-title {
            font-size: 36px;
        }

        }

        @@media (max-width: 768px) {
            .navigation-header

        {
            padding: 12px 0;
        }

        .nav-container {
            padding: 0 16px;
        }

        .home-button {
            padding: 10px 16px;
            font-size: 13px;
            gap: 8px;
        }

        .help-button {
            padding: 10px 12px;
            font-size: 13px;
        }

        .breadcrumb-nav {
            display: none;
        }

        .login-container {
            padding-top: 60px;
        }

        .brand-panel, .form-panel {
            padding: 24px;
            min-height: auto;
        }

        .brand-title {
            font-size: 28px;
        }

        .feature-item {
            padding: 16px;
        }

        }</style>
</head>
<body>
    <!-- 🎯 MICROSOFT FLUENT DESIGN NAVIGATION -->
    <header class="navigation-header">
        <div class="nav-container">
            <!-- Brand Section -->
            <div class="nav-brand">
                <div class="nav-logo">O</div>
                <div class="nav-brand-text">
                    <div class="nav-brand-title">Omnitak</div>
                    <div class="nav-brand-subtitle">Support Hub</div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="nav-actions">
                <a asp-controller="Home" asp-action="Index" class="home-button">
                    <i class="home-icon bi bi-house-heart-fill"></i>
                    <span>Home</span>
                </a>
                <button class="help-button" onclick="toggleHelpPanel()">
                    <i class="help-icon bi bi-question-circle"></i>
                    <span>Help</span>
                </button>
            </div>
        </div>

        <!-- Breadcrumb Navigation -->
        <div class="breadcrumb-nav">
            <div class="breadcrumb-container">
                <a asp-controller="Home" asp-action="Index" class="breadcrumb-link">Home</a>
                <span class="breadcrumb-separator">›</span>
                <span>Account</span>
                <span class="breadcrumb-separator">›</span>
                <span>Login</span>
            </div>
        </div>
    </header>

    <!-- 🎯 FUNCTIONAL HELP PANEL -->
    <div class="help-panel" id="helpPanel">
        <div class="help-header">
            <div class="help-title">
                <i class="bi bi-info-circle"></i>
                Login Help & Support
            </div>
            <button class="help-close" onclick="toggleHelpPanel()">
                <i class="bi bi-x"></i>
            </button>
        </div>

        <div class="help-content">
            <div class="help-section">
                <div class="help-section-title">
                    <i class="bi bi-key"></i>
                    Common Login Issues
                </div>

                <div class="help-item" onclick="showHelpDetails('password')">
                    <div class="help-item-icon">
                        <i class="bi bi-lock"></i>
                    </div>
                    <div class="help-item-content">
                        <div class="help-item-title">Forgot Password?</div>
                        <div class="help-item-description">Reset your password quickly and securely</div>
                    </div>
                </div>

                <div class="help-item" onclick="showHelpDetails('account')">
                    <div class="help-item-icon">
                        <i class="bi bi-person-x"></i>
                    </div>
                    <div class="help-item-content">
                        <div class="help-item-title">Account Locked?</div>
                        <div class="help-item-description">Unlock your account or contact IT support</div>
                    </div>
                </div>

                <div class="help-item" onclick="showHelpDetails('browser')">
                    <div class="help-item-icon">
                        <i class="bi bi-browser-chrome"></i>
                    </div>
                    <div class="help-item-content">
                        <div class="help-item-title">Browser Issues</div>
                        <div class="help-item-description">Clear cache, cookies, or try incognito mode</div>
                    </div>
                </div>
            </div>

            <div class="help-section">
                <div class="help-section-title">
                    <i class="bi bi-book"></i>
                    Quick Actions
                </div>

                <div class="help-item" onclick="openKnowledgeBase()">
                    <div class="help-item-icon">
                        <i class="bi bi-journal-text"></i>
                    </div>
                    <div class="help-item-content">
                        <div class="help-item-title">Browse Knowledge Base</div>
                        <div class="help-item-description">Find detailed guides and solutions</div>
                    </div>
                </div>

                <div class="help-item" onclick="startLiveChat()">
                    <div class="help-item-icon">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                    <div class="help-item-content">
                        <div class="help-item-title">Live Chat Support</div>
                        <div class="help-item-description">Get instant help from our AI assistant</div>
                    </div>
                </div>

                <div class="help-item" onclick="createSupportTicket()">
                    <div class="help-item-icon">
                        <i class="bi bi-ticket-detailed"></i>
                    </div>
                    <div class="help-item-content">
                        <div class="help-item-title">Create Support Ticket</div>
                        <div class="help-item-description">Submit a detailed support request</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="help-footer">
            <div class="help-contact">
                <i class="help-contact-icon bi bi-telephone"></i>
                <span>Need immediate help? Call: +27 11 123 4567</span>
            </div>
        </div>
    </div>

    <!-- Background -->
    <div class="background-container">
        <div class="floating-orbs">
            <div class="orb"></div>
            <div class="orb"></div>
            <div class="orb"></div>
        </div>
    </div>

    <div class="login-container">
        <!-- Left Panel - Brand Information -->
        <div class="brand-panel">
            <div class="brand-content">
                <div class="company-logo">O</div>
                <h1 class="brand-title">Omnitak Support Hub</h1>
                <p class="brand-subtitle">Enterprise-grade IT support and ticketing platform designed for modern businesses.</p>

                <ul class="features-list">
                    <li class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <div class="feature-text">Secure & Enterprise Ready</div>
                    </li>
                    <li class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-lightning-charge"></i>
                        </div>
                        <div class="feature-text">Lightning Fast Support</div>
                    </li>
                    <li class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-graph-up-arrow"></i>
                        </div>
                        <div class="feature-text">Advanced Analytics</div>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Right Panel - Login Form -->
        <div class="form-panel">
            <div class="login-card">
                <form class="login-form" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-header">
                        <h2 class="form-title">Welcome Back</h2>
                        <p class="form-subtitle">Sign in to access your dashboard</p>
                    </div>

                    <div asp-validation-summary="All" class="validation-summary-errors"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-options">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Keep me signed in</label>
                        </div>
                        <a asp-action="ForgotPassword" class="forgot-password-link">Forgot Password?</a>
                    </div>

                    <button type="submit" class="btn">
                        Sign In to Dashboard
                    </button>

                    <div class="divider">
                        <div class="divider-line"></div>
                        <span class="divider-text">New to Omnitak?</span>
                        <div class="divider-line"></div>
                    </div>

                    <div class="register-link">
                        <p style="color: var(--text-secondary); margin-bottom: 0.5rem;">Don't have an account?</p>
                        <a asp-action="Register">Create New Account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // 🎯 FUNCTIONAL HELP SYSTEM - Enterprise Grade
        function toggleHelpPanel() {
            const helpPanel = document.getElementById('helpPanel');
            helpPanel.classList.toggle('active');
        }

        function showHelpDetails(type) {
            switch(type) {
                case 'password':
                    window.location.href = '@Url.Action("ForgotPassword", "Account")';
                    break;
                case 'account':
                    alert('Account locked? Please contact IT Support at +27 11 123 4567 or email support@omnitak.com for immediate assistance.');
                    break;
                case 'browser':
                    alert('Browser issues?\n\n1. Clear your browser cache and cookies\n2. Try logging in using incognito/private mode\n3. Disable browser extensions temporarily\n4. Try a different browser\n\nIf issues persist, contact IT support.');
                    break;
            }
        }

        function openKnowledgeBase() {
            // Navigate to knowledge base if user is authenticated, or show info
            alert('Knowledge Base contains helpful articles and guides. You can access it after logging in to your dashboard.');
        }

        function startLiveChat() {
            // This would integrate with your existing chatbot
            alert('Live Chat will be available after you log in. Our AI assistant can help you 24/7 with technical issues and questions.');
        }

        function createSupportTicket() {
            alert('Support tickets help us track and resolve complex issues. You can create tickets after logging in to your dashboard.');
        }

        // Close help panel when clicking outside
        document.addEventListener('click', function(event) {
            const helpPanel = document.getElementById('helpPanel');
            const helpButton = document.querySelector('.help-button');

            if (!helpPanel.contains(event.target) && !helpButton.contains(event.target)) {
                helpPanel.classList.remove('active');
            }
        });

        document.addEventListener('keydown', function(event) {
            if (event.key === 'F1' || (event.key === 'h' && event.ctrlKey)) {
                event.preventDefault();
                toggleHelpPanel();
            }
            if (event.key === 'Escape') {
                document.getElementById('helpPanel').classList.remove('active');
            }
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>