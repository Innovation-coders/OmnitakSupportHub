@model IEnumerable<OmnitakSupportHub.Models.SupportTeam>
@{
    ViewData["Title"] = "Support Teams";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Omnitak Support Hub</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-deep-blue: #0F1419;
            --accent-electric: #00E5FF;
            --accent-purple: #7B2CBF;
            --surface-card: #242424;
            --text-primary: #FFFFFF;
            --text-secondary: rgba(255,255,255,0.7);
            --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
            --shadow-card: 0 8px 32px rgba(0,0,0,0.3);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--primary-deep-blue);
            color: var(--text-primary);
            min-height: 100vh;
        }

        .main-content {
            margin: 40px auto;
            max-width: 900px;
            padding: 32px;
            background: var(--surface-card);
            border-radius: 20px;
            box-shadow: var(--shadow-card);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }

            .header h1 {
                font-size: 32px;
                font-weight: 800;
                background: var(--gradient-accent);
                background-clip: text;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .btn-primary {
            background: var(--gradient-accent);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            box-shadow: 0 0 20px rgba(0,229,255,0.2);
            transition: all 0.3s;
        }

            .btn-primary:hover {
                box-shadow: 0 0 40px rgba(0,229,255,0.4);
                transform: translateY(-2px);
            }

        .table {
            width: 100%;
            border-collapse: collapse;
            background: transparent;
        }

            .table th, .table td {
                padding: 16px;
                border-bottom: 1px solid rgba(255,255,255,0.1);
                color: var(--text-secondary);
            }

            .table th {
                background: rgba(255,255,255,0.05);
                color: var(--text-primary);
                font-weight: 600;
                text-transform: uppercase;
            }

            .table tr:hover td {
                background: rgba(255,255,255,0.05);
                color: var(--text-primary);
            }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="header">
            <h1><i class="bi bi-people"></i> Support Teams</h1>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Team</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Specialization</th>
                    <th>Description</th>
                    <th>Members</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model)
                {
                    <tr>
                        <td>@team.TeamName</td>
                        <td>@team.Specialization</td>
                        <td>@team.Description</td>
                        <td>@team.Users.Count()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>