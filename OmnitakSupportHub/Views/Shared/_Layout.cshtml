<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
    <title>@ViewData["Title"] - OmnitakSupportHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    @if (!Context.Request.Path.StartsWithSegments("/UserDashboard"))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">OmnitakSupportHub</a>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "home" ? "active" : "")"
                                   asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "privacy" ? "active" : "")"
                                   asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "my-tickets" ? "active" : "")"
                                   asp-controller="UserDashboard" asp-action="Index">My Tickets</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "UserDashboard" ? "active" : "")"
                                   href="@Url.Action("Index", "UserDashboard")#recent-tickets">
                                    My Tickets
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="@(Context.Request.Path.StartsWithSegments("/UserDashboard") ? "dashboard-container" : "container")">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (!Context.Request.Path.StartsWithSegments("/UserDashboard"))
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - OmnitakSupportHub - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>