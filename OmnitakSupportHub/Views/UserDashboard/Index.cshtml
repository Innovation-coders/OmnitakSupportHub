@model IEnumerable<OmnitakSupportHub.Models.Ticket>
@{
    ViewData["Title"] = "User Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Omnitak Support Hub</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            /* Premium Enterprise Color Palette from ManagerDashboard */
            --primary-deep-blue: #0F1419;
            --primary-navy: #1A237E;
            --accent-electric: #00E5FF;
            --accent-purple: #7B2CBF;
            --accent-gold: #FFB300;
            --accent-success: #4CAF50;
            --accent-warning: #FF9800;
            --accent-danger: #F44336;
            --surface-dark: #121212;
            --surface-elevated: #1E1E1E;
            --surface-card: #242424;
            --surface-glass: rgba(255, 255, 255, 0.05);
            --text-primary: #FFFFFF;
            --text-secondary: rgba(255, 255, 255, 0.7);
            --text-muted: rgba(255, 255, 255, 0.5);
            --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
            --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
            --gradient-card: linear-gradient(135deg, #1E1E1E 0%, #242424 100%);
            --shadow-glow: 0 0 40px rgba(0, 229, 255, 0.3);
            --shadow-deep: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
            --shadow-card: 0 8px 32px rgba(0, 0, 0, 0.3);
            --border-glow: rgba(0, 229, 255, 0.3);
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 20px;
            --radius-xl: 24px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--primary-deep-blue);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Animated Background */
        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--gradient-primary);
            z-index: -2;
        }

        .background-animation {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.6;
            z-index: -1;
        }

        .floating-orbs {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .orb {
            position: absolute;
            border-radius: 50%;
            background: var(--gradient-accent);
            opacity: 0.08;
            filter: blur(1px);
            animation: orbFloat 30s infinite ease-in-out;
        }

            .orb:nth-child(1) {
                width: 400px;
                height: 400px;
                top: -200px;
                left: -200px;
                animation-delay: 0s;
            }

            .orb:nth-child(2) {
                width: 300px;
                height: 300px;
                top: 50%;
                right: -150px;
                animation-delay: -10s;
            }

            .orb:nth-child(3) {
                width: 200px;
                height: 200px;
                bottom: -100px;
                left: 30%;
                animation-delay: -20s;
            }

        @@keyframes orbFloat {
            0%, 100%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(30px, -30px) rotate(120deg);
        }

        66% {
            transform: translate(-20px, 20px) rotate(240deg);
        }

        }

        /* Dashboard Layout */
        .dashboard-container {
            display: flex;
            min-height: 100vh;
            position: relative;
            z-index: 1;
        }

        /* Enhanced Sidebar */
        .sidebar {
            width: 320px;
            background: var(--gradient-card);
            backdrop-filter: blur(20px);
            border-right: 1px solid var(--border-glow);
            box-shadow: var(--shadow-deep);
            padding: 40px 0;
            position: fixed;
            height: 100vh;
            z-index: 100;
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 0 40px;
            margin-bottom: 50px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 40px;
        }

        .sidebar-logo {
            width: 80px;
            height: 80px;
            background: var(--gradient-accent);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            font-weight: 900;
            color: white;
            margin: 0 auto 24px;
            box-shadow: var(--shadow-glow);
            animation: logoGlow 4s infinite ease-in-out;
        }

        @@keyframes logoGlow {
            0%, 100%

        {
            box-shadow: var(--shadow-glow);
            transform: scale(1);
        }

        50% {
            box-shadow: 0 0 60px rgba(0, 229, 255, 0.5);
            transform: scale(1.05);
        }

        }

        .sidebar-title {
            font-size: 24px;
            font-weight: 800;
            background: var(--gradient-accent);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 12px;
        }

        .sidebar-subtitle {
            font-size: 14px;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 600;
        }

        .user-profile {
            background: var(--surface-glass);
            border-radius: var(--radius-lg);
            padding: 24px;
            margin: 0 32px 40px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
        }

            .user-profile::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 2px;
                background: var(--gradient-accent);
            }

        .user-avatar {
            width: 64px;
            height: 64px;
            background: var(--gradient-accent);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: 800;
            color: white;
            margin: 0 auto 16px;
            box-shadow: 0 8px 24px rgba(0, 229, 255, 0.4);
            transition: all 0.3s ease;
        }

            .user-avatar:hover {
                transform: scale(1.1);
                box-shadow: 0 12px 36px rgba(0, 229, 255, 0.6);
            }

        .user-name {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-primary);
            text-align: center;
            margin-bottom: 6px;
        }

        .user-role {
            font-size: 12px;
            color: var(--text-muted);
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
        }

        .nav-menu {
            list-style: none;
            padding: 0 32px;
        }

        .nav-item {
            margin-bottom: 12px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 18px 24px;
            color: var(--text-secondary);
            text-decoration: none;
            border-radius: var(--radius-md);
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            font-weight: 600;
            position: relative;
            cursor: pointer;
        }

            .nav-link::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 0;
                background: var(--gradient-accent);
                transition: width 0.4s ease;
                z-index: -1;
            }

            .nav-link:hover {
                color: var(--text-primary);
                background: var(--surface-glass);
                transform: translateX(12px);
                box-shadow: 0 8px 32px rgba(0, 229, 255, 0.2);
            }

                .nav-link:hover::before {
                    width: 4px;
                }

            .nav-link.active {
                background: var(--gradient-accent);
                color: white;
                box-shadow: var(--shadow-glow);
                transform: translateX(8px);
            }

        .nav-icon {
            font-size: 20px;
            margin-right: 16px;
            width: 28px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .nav-link:hover .nav-icon {
            transform: scale(1.2);
        }

        .nav-badge {
            background: var(--accent-danger);
            color: white;
            font-size: 11px;
            padding: 4px 8px;
            border-radius: 12px;
            margin-left: auto;
            font-weight: 700;
            animation: badgePulse 2s infinite;
        }

        @@keyframes badgePulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 320px;
            padding: 40px;
            min-height: 100vh;
            background: transparent;
        }

        .content-section {
            display: none;
            animation: contentFadeIn 0.8s ease;
        }

            .content-section.active {
                display: block;
            }

        @@keyframes contentFadeIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .welcome-section {
            background: var(--gradient-card);
            border-radius: var(--radius-xl);
            padding: 60px;
            margin-bottom: 40px;
            border: 1px solid var(--border-glow);
            box-shadow: var(--shadow-deep);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .welcome-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 50% 50%, rgba(0, 229, 255, 0.1), transparent 70%);
                z-index: 0;
            }

            .welcome-section > * {
                position: relative;
                z-index: 1;
            }

            .welcome-section h1 {
                font-size: 48px;
                font-weight: 900;
                background: var(--gradient-accent);
                background-clip: text;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                margin-bottom: 20px;
                letter-spacing: -1px;
            }

            .welcome-section p {
                color: var(--text-secondary);
                font-size: 20px;
                font-weight: 500;
                margin-bottom: 24px;
            }

        .ticket-stats {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            margin-top: 24px;
        }

        .stat-badge {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            border: 2px solid transparent;
        }

            .stat-badge:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            }

        .stat-open {
            background: linear-gradient(135deg, rgba(244, 67, 54, 0.2), rgba(244, 67, 54, 0.1));
            color: #ffcccb;
            border-color: var(--accent-danger);
        }

            .stat-open:hover {
                background: linear-gradient(135deg, rgba(244, 67, 54, 0.3), rgba(244, 67, 54, 0.2));
                box-shadow: 0 8px 25px rgba(244, 67, 54, 0.3);
            }

        .stat-pending {
            background: linear-gradient(135deg, rgba(255, 152, 0, 0.2), rgba(255, 152, 0, 0.1));
            color: #ffd54f;
            border-color: var(--accent-warning);
        }

            .stat-pending:hover {
                background: linear-gradient(135deg, rgba(255, 152, 0, 0.3), rgba(255, 152, 0, 0.2));
                box-shadow: 0 8px 25px rgba(255, 152, 0, 0.3);
            }

        .stat-resolved {
            background: linear-gradient(135deg, rgba(76, 175, 80, 0.2), rgba(76, 175, 80, 0.1));
            color: #a5d6a7;
            border-color: var(--accent-success);
        }

            .stat-resolved:hover {
                background: linear-gradient(135deg, rgba(76, 175, 80, 0.3), rgba(76, 175, 80, 0.2));
                box-shadow: 0 8px 25px rgba(76, 175, 80, 0.3);
            }

        .stat-badge i {
            font-size: 16px;
        }

        /* Enhanced Quick Actions */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 32px;
            margin-bottom: 40px;
        }

        .action-card {
            background: var(--gradient-card);
            border-radius: var(--radius-xl);
            padding: 40px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .action-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: var(--gradient-accent);
                opacity: 0;
                transition: opacity 0.4s ease;
                z-index: 0;
            }

            .action-card:hover::before {
                opacity: 0.1;
            }

            .action-card > * {
                position: relative;
                z-index: 1;
            }

            .action-card:hover {
                transform: translateY(-12px) scale(1.03);
                box-shadow: var(--shadow-glow);
                border-color: var(--border-glow);
            }

        .action-icon {
            font-size: 56px;
            background: var(--gradient-accent);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
            transition: transform 0.3s ease;
        }

        .action-card:hover .action-icon {
            transform: scale(1.2);
        }

        .action-title {
            font-size: 20px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 12px;
        }

        .action-description {
            color: var(--text-secondary);
            font-size: 15px;
            line-height: 1.6;
        }

        /* Enhanced Components */
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }

        .section-title {
            font-size: 32px;
            font-weight: 800;
            color: var(--text-primary);
            background: var(--gradient-accent);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .refresh-btn {
            background: var(--gradient-accent);
            border: none;
            border-radius: var(--radius-md);
            padding: 16px 28px;
            color: white;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.4s ease;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 15px;
        }

            .refresh-btn:hover {
                transform: translateY(-3px);
                box-shadow: var(--shadow-glow);
            }

        .tickets-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
            gap: 32px;
        }

        .ticket-card {
            background: var(--gradient-card);
            border-radius: var(--radius-xl);
            padding: 32px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .ticket-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 4px;
                height: 0;
                background: var(--gradient-accent);
                transition: height 0.4s ease;
            }

            .ticket-card:hover {
                transform: translateY(-8px);
                box-shadow: var(--shadow-glow);
                border-color: var(--border-glow);
            }

                .ticket-card:hover::before {
                    height: 100%;
                }

        .ticket-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .ticket-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 6px;
        }

        .ticket-id {
            font-size: 12px;
            color: var(--text-muted);
            font-weight: 600;
            text-transform: uppercase;
        }

        .ticket-status {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .status-open {
            background: linear-gradient(135deg, rgba(244, 67, 54, 0.3), rgba(244, 67, 54, 0.2));
            color: #ffcccb;
            border: 1px solid var(--accent-danger);
        }

        .status-pending {
            background: linear-gradient(135deg, rgba(255, 152, 0, 0.3), rgba(255, 152, 0, 0.2));
            color: #ffd54f;
            border: 1px solid var(--accent-warning);
        }

        .status-resolved {
            background: linear-gradient(135deg, rgba(76, 175, 80, 0.3), rgba(76, 175, 80, 0.2));
            color: #a5d6a7;
            border: 1px solid var(--accent-success);
        }

        .ticket-description {
            color: var(--text-secondary);
            font-size: 15px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .ticket-meta {
            display: flex;
            justify-content: space-between;
            font-size: 13px;
            color: var(--text-muted);
            font-weight: 600;
        }

        /* Profile Styles */
        .profile-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .profile-header {
            background: var(--gradient-card);
            border-radius: var(--radius-xl);
            padding: 60px;
            margin-bottom: 40px;
            border: 1px solid var(--border-glow);
            box-shadow: var(--shadow-deep);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .profile-avatar {
            width: 140px;
            height: 140px;
            background: var(--gradient-accent);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 56px;
            font-weight: 900;
            color: white;
            margin: 0 auto 32px;
            box-shadow: var(--shadow-glow);
            cursor: pointer;
            transition: all 0.4s ease;
        }

            .profile-avatar:hover {
                transform: scale(1.05);
                box-shadow: 0 0 60px rgba(0, 229, 255, 0.6);
            }

        .profile-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
            margin-bottom: 40px;
        }

        .info-card {
            background: var(--gradient-card);
            border-radius: var(--radius-xl);
            padding: 40px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: var(--shadow-card);
            transition: all 0.4s ease;
            position: relative;
        }

            .info-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 4px;
                height: 0;
                background: var(--gradient-accent);
                transition: height 0.4s ease;
            }

            .info-card:hover {
                border-color: var(--border-glow);
                transform: translateY(-4px);
                box-shadow: var(--shadow-deep);
            }

                .info-card:hover::before {
                    height: 100%;
                }

            .info-card h3 {
                color: var(--text-primary);
                font-size: 22px;
                font-weight: 700;
                margin-bottom: 28px;
                display: flex;
                align-items: center;
                gap: 16px;
            }

        .info-item {
            display: flex;
            align-items: center;
            padding: 16px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }

            .info-item:last-child {
                border-bottom: none;
            }

            .info-item:hover {
                background: rgba(255, 255, 255, 0.03);
                border-radius: var(--radius-sm);
                margin: 0 -16px;
                padding: 16px;
            }

        .info-icon {
            font-size: 18px;
            color: var(--accent-electric);
            margin-right: 16px;
            width: 24px;
        }

        .info-label {
            color: var(--text-muted);
            font-size: 14px;
            margin-right: 20px;
            min-width: 120px;
            font-weight: 600;
        }

        .info-value {
            color: var(--text-primary);
            font-weight: 600;
            flex: 1;
        }

        /* Mobile Responsiveness */
        .mobile-menu-btn {
            display: none;
            position: fixed;
            top: 24px;
            left: 24px;
            z-index: 1001;
            background: var(--gradient-accent);
            border: none;
            border-radius: var(--radius-md);
            padding: 16px;
            color: white;
            cursor: pointer;
            font-size: 24px;
            box-shadow: var(--shadow-glow);
            transition: all 0.3s ease;
        }

        @@media (max-width: 1024px) {
            .sidebar

        {
            transform: translateX(-100%);
            z-index: 1000;
        }

        .sidebar.open {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .mobile-menu-btn {
            display: block;
        }

        .quick-actions {
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        }

        .tickets-grid {
            grid-template-columns: 1fr;
        }

        }

        @@media (max-width: 768px) {
            .main-content

        {
            padding: 20px;
        }

        .welcome-section {
            padding: 40px 20px;
        }

            .welcome-section h1 {
                font-size: 36px;
            }

        .profile-info {
            grid-template-columns: 1fr;
        }

        .sidebar {
            width: 100%;
        }

        }

        .logout-section {
            margin-top: auto;
            padding: 32px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        @@keyframes spin {
            from

        {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }

        }
    </style>
</head>
<body>
    <!-- Animated Background -->
    <div class="background-container">
        <div class="background-animation">
            <div class="floating-orbs">
                <div class="orb"></div>
                <div class="orb"></div>
                <div class="orb"></div>
            </div>
        </div>
    </div>

    <button class="mobile-menu-btn" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>

    <div class="dashboard-container">
       
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">O</div>
                <h3 class="sidebar-title">Support Portal</h3>
                <p class="sidebar-subtitle">Your Hub</p>
            </div>

         
            <div class="user-profile">
                <div class="user-avatar">
                    @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                </div>
                <div class="user-name">@(User.Identity.Name ?? "User")</div>
                <div class="user-role">Employee</div>
            </div>

            <nav>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="#" class="nav-link active" onclick="showSection('dashboard')">
                            <i class="nav-icon bi bi-house-door"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" onclick="showSection('my-tickets')">
                            <i class="nav-icon bi bi-ticket-detailed"></i>
                            My Tickets
                            @if (Model?.Where(t => t.Status?.StatusName == "Open").Count() > 0)
                            {
                                <span class="nav-badge">@Model.Where(t => t.Status?.StatusName == "Open").Count()</span>
                            }
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Ticket" asp-action="Create" class="nav-link">
                            <i class="nav-icon bi bi-plus-circle"></i>
                            New Ticket
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="UserDashboard" asp-action="Knowledgebase" class="nav-link">
                            <i class="nav-icon bi bi-journal-text"></i>
                            Knowledge Base
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" onclick="showSection('profile')">
                            <i class="nav-icon bi bi-person-gear"></i>
                            Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" onclick="showSection('live-chat')">
                            <i class="nav-icon bi bi-chat-dots"></i>
                            Live Chat
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link" onclick="showSection('settings')">
                            <i class="nav-icon bi bi-gear"></i>
                            Settings
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="logout-section">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="refresh-btn" style="width: 100%;">
                        <i class="bi bi-box-arrow-right"></i>
                        Logout
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
         
            <section id="dashboard" class="content-section active">
                <div class="welcome-section">
                    <h1>Welcome Back, @(User.Identity.Name?.Split('@')[0] ?? "User")!</h1>
                    @{
                        var totalTickets = Model?.Count() ?? 0;
                        var openTickets = Model?.Where(t => t.Status?.StatusName == "Open").Count() ?? 0;
                        var pendingTickets = Model?.Where(t => t.Status?.StatusName == "Pending").Count() ?? 0;
                        var resolvedTickets = Model?.Where(t => t.Status?.StatusName == "Resolved").Count() ?? 0;
                    }
                    @if (totalTickets > 0)
                    {
                        <p>You have <strong>@totalTickets ticket@(totalTickets != 1 ? "s" : "")</strong> in the system</p>
                        <div class="ticket-stats">
                            @if (openTickets > 0)
                            {
                                <div class="stat-badge stat-open">
                                    <i class="bi bi-exclamation-circle"></i>
                                    <span>@openTickets Open</span>
                                </div>
                            }
                            @if (pendingTickets > 0)
                            {
                                <div class="stat-badge stat-pending">
                                    <i class="bi bi-clock"></i>
                                    <span>@pendingTickets Pending</span>
                                </div>
                            }
                            @if (resolvedTickets > 0)
                            {
                                <div class="stat-badge stat-resolved">
                                    <i class="bi bi-check-circle"></i>
                                    <span>@resolvedTickets Resolved</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p>You haven't submitted any support tickets yet. Get started by creating your first ticket!</p>
                    }
                </div>

                <div class="quick-actions">
                    <div class="action-card" onclick="window.location.href='@Url.Action("Create", "Ticket")'">
                        <div class="action-icon">
                            <i class="bi bi-plus-circle"></i>
                        </div>
                        <div class="action-title">Submit New Ticket</div>
                        <div class="action-description">Report an issue or request support</div>
                    </div>
                    <div class="action-card" onclick="showSection('my-tickets')">
                        <div class="action-icon">
                            <i class="bi bi-ticket-detailed"></i>
                        </div>
                        <div class="action-title">View My Tickets</div>
                        <div class="action-description">Track progress on your requests</div>
                    </div>
                    <div class="action-card" onclick="window.location.href='@Url.Action("Knowledgebase", "UserDashboard")'">
                        <div class="action-icon">
                            <i class="bi bi-journal-text"></i>
                        </div>
                        <div class="action-title">Knowledge Base</div>
                        <div class="action-description">Find answers to common questions</div>
                    </div>
                    <div class="action-card" onclick="showSection('live-chat')">
                        <div class="action-icon">
                            <i class="bi bi-chat-dots"></i>
                        </div>
                        <div class="action-title">Live Chat</div>
                        <div class="action-description">Get instant help from our team</div>
                    </div>
                </div>
            </section>

          
            <section id="my-tickets" class="content-section">
                <div class="section-header">
                    <h2 class="section-title">My Tickets</h2>
                    <button class="refresh-btn" onclick="refreshTickets()">
                        <i class="bi bi-arrow-clockwise"></i>
                        Refresh
                    </button>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="tickets-grid">
                        @foreach (var ticket in Model.Take(6))
                        {
                            <div class="ticket-card" onclick="viewTicket(@ticket.TicketID)">
                                <div class="ticket-header">
                                    <div>
                                        <div class="ticket-title">@ticket.Title</div>
                                        <div class="ticket-id">Ticket #@ticket.TicketID</div>
                                    </div>
                                    <span class="ticket-status status-@(ticket.Status?.StatusName?.ToLower() ?? "open")">
                                        @(ticket.Status?.StatusName ?? "Open")
                                    </span>
                                </div>
                                <div class="ticket-description">
                                    @(ticket.Description?.Length > 100 ? ticket.Description.Substring(0, 100) + "..." : ticket.Description)
                                </div>
                                <div class="ticket-meta">
                                    <span>Created: @ticket.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    <span>Priority: @(ticket.Priority?.PriorityName ?? "Normal")</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="action-card" style="text-align: center; padding: 60px;">
                        <div class="action-icon">
                            <i class="bi bi-inbox"></i>
                        </div>
                        <div class="action-title">No Tickets Found</div>
                        <div class="action-description">You haven't submitted any support tickets yet.</div>
                        <button class="refresh-btn" onclick="window.location.href='@Url.Action("Create", "Ticket")'" style="margin-top: 20px;">
                            Create Your First Ticket
                        </button>
                    </div>
                }
            </section>

          
            <section id="profile" class="content-section">
                <div class="profile-container">
                    <div class="profile-header">
                        <div class="profile-avatar">
                            @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                        </div>
                        <h2 style="color: var(--text-primary); margin-bottom: 12px; font-size: 28px; font-weight: 800;">@(User.Identity.Name ?? "User")</h2>
                        <p style="color: var(--text-secondary); font-size: 16px;">Employee</p>
                    </div>

                    <div class="profile-info">
                        <div class="info-card">
                            <h3>
                                <i class="bi bi-person-fill" style="color: var(--accent-electric);"></i>
                                Personal Information
                            </h3>
                            <div class="info-item">
                                <i class="info-icon bi bi-envelope"></i>
                                <span class="info-label">Email:</span>
                                <span class="info-value">@(User.Identity.Name ?? "user@omnitak.com")</span>
                            </div>
                            <div class="info-item">
                                <i class="info-icon bi bi-telephone"></i>
                                <span class="info-label">Phone:</span>
                                <span class="info-value">+27 11 123 4567</span>
                            </div>
                            <div class="info-item">
                                <i class="info-icon bi bi-building"></i>
                                <span class="info-label">Department:</span>
                                <span class="info-value">Information Technology</span>
                            </div>
                            <div class="info-item">
                                <i class="info-icon bi bi-geo-alt"></i>
                                <span class="info-label">Location:</span>
                                <span class="info-value">Johannesburg, South Africa</span>
                            </div>
                        </div>

                        <div class="info-card">
                            <h3>
                                <i class="bi bi-graph-up" style="color: var(--accent-success);"></i>
                                Account Statistics
                            </h3>
                            <div class="info-item">
                                <i class="info-icon bi bi-ticket-detailed"></i>
                                <span class="info-label">Total Tickets:</span>
                                <span class="info-value">@(Model?.Count() ?? 0)</span>
                            </div>
                            <div class="info-item">
                                <i class="info-icon bi bi-clock"></i>
                                <span class="info-label">Open Tickets:</span>
                                <span class="info-value">@(Model?.Where(t => t.Status?.StatusName == "Open").Count() ?? 0)</span>
                            </div>
                            <div class="info-item">
                                <i class="info-icon bi bi-check-circle"></i>
                                <span class="info-label">Resolved:</span>
                                <span class="info-value">@(Model?.Where(t => t.Status?.StatusName == "Resolved").Count() ?? 0)</span>
                            </div>
                            <div class="info-item">
                                <i class="info-icon bi bi-calendar3"></i>
                                <span class="info-label">Member Since:</span>
                                <span class="info-value">January 2024</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

          
            <section id="live-chat" class="content-section">
                <div class="profile-container">
                    <div class="profile-header">
                        <div class="profile-avatar">
                            <i class="bi bi-chat-dots-fill"></i>
                        </div>
                        <h2 style="color: var(--text-primary); margin-bottom: 12px; font-size: 28px; font-weight: 800;">Live Chat Support</h2>
                        <p style="color: var(--text-secondary); font-size: 16px;">Get instant help from our support team</p>
                    </div>
                </div>
            </section>

         
            <section id="settings" class="content-section">
                <div class="profile-container">
                    <div class="profile-header">
                        <div class="profile-avatar">
                            <i class="bi bi-gear-fill"></i>
                        </div>
                        <h2 style="color: var(--text-primary); margin-bottom: 12px; font-size: 28px; font-weight: 800;">Settings</h2>
                        <p style="color: var(--text-secondary); font-size: 16px;">Manage your account preferences</p>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script>
      
        function showSection(sectionId) {
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });

            const targetSection = document.getElementById(sectionId);
            if (targetSection) {
                targetSection.classList.add('active');
            }

            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });

            if (event && event.target) {
                event.target.closest('.nav-link').classList.add('active');
            }

            const sidebar = document.getElementById('sidebar');
            if (window.innerWidth <= 1024) {
                sidebar.classList.remove('open');
            }
        }

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }

        function viewTicket(ticketId) {
            window.location.href = '/Ticket/Details/' + ticketId;
        }

        function refreshTickets() {
            const refreshBtn = event.target.closest('button');
            const originalContent = refreshBtn.innerHTML;
            refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise" style="animation: spin 1s linear infinite;"></i> Refreshing...';
            refreshBtn.disabled = true;

            setTimeout(() => {
                refreshBtn.innerHTML = originalContent;
                refreshBtn.disabled = false;
                location.reload();
            }, 1500);
        }

        document.addEventListener('DOMContentLoaded', function() {
            showSection('dashboard');

           
            document.querySelectorAll('.stat-badge').forEach(badge => {
                badge.addEventListener('click', function() {
                    showSection('my-tickets');
                });
            });
        });
    </script>
</body>
</html>