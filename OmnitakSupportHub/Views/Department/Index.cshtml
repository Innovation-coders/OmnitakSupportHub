@model IEnumerable<OmnitakSupportHub.Models.Department>
@{
    ViewData["Title"] = "Departments Management";
}
<style>
    :root {
        --primary-deep-blue: #0F1419;
        --primary-navy: #1A237E;
        --accent-electric: #00E5FF;
        --accent-purple: #7B2CBF;
        --accent-gold: #FFB300;
        --surface-card: #242424;
        --text-primary: #FFFFFF;
        --text-secondary: rgba(255,255,255,0.7);
        --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
        --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
        --shadow-card: 0 8px 32px rgba(0, 229, 255, 0.08);
        --border-glow: rgba(0, 229, 255, 0.3);
    }

    body {
        background: var(--gradient-primary);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
    }

    .admin-card {
        max-width: 900px;
        margin: 40px auto;
        background: var(--surface-card);
        border-radius: 24px;
        box-shadow: var(--shadow-card);
        padding: 2.5rem 2rem;
        color: var(--text-primary);
    }

    .admin-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2.2rem;
        font-weight: 800;
        background: var(--gradient-accent);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        letter-spacing: 1px;
    }

    .btn-back {
        background: var(--gradient-accent);
        color: #fff;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border: none;
        box-shadow: var(--shadow-card);
        text-decoration: none;
        transition: background 0.2s;
    }

        .btn-back:hover {
            background: var(--accent-gold);
            color: var(--primary-navy);
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 2rem;
        border-radius: 12px;
        overflow: hidden;
        background: var(--surface-card);
        box-shadow: var(--shadow-card);
    }

    th, td {
        padding: 14px;
        text-align: left;
        border-bottom: 1px solid var(--border-glow);
    }

    th {
        background: var(--gradient-accent);
        color: #fff;
        font-weight: 700;
    }

    td {
        background: var(--primary-deep-blue);
    }

    .btn {
        border-radius: 8px;
        padding: 0.5rem 1.25rem;
        font-weight: 600;
        border: none;
        margin-right: 5px;
        transition: background 0.2s;
    }

    .btn-success {
        background: var(--accent-electric);
        color: #fff;
    }

    .btn-warning {
        background: var(--accent-gold);
        color: #212529;
    }

    .btn-danger {
        background: #F44336;
        color: #fff;
    }

    .alert-success {
        background: rgba(76, 175, 80, 0.15);
        color: #4CAF50;
        border-radius: 12px;
        padding: 1rem;
        margin-top: 1rem;
    }
</style>
<div class="admin-card">
    <div class="admin-header">
        <span class="admin-title">Departments Management</span>
        <a asp-controller="AdminDashboard" asp-action="Index" class="btn-back">← Admin Dashboard</a>
    </div>
    <a asp-action="Create" class="btn btn-success">Create New Department</a>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success">@TempData["SuccessMessage"]</div>
    }
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.DepartmentName</td>
                    <td>@dept.Description</td>
                    <td>@dept.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@dept.DepartmentId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@dept.DepartmentId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>