@model List<OmnitakSupportHub.Models.AuditLog>
<div class="content-card">
    <div class="card-header">
        <h3 class="card-title"><i class="bi bi-clipboard-data"></i> Audit Trail</h3>
    </div>
    <div class="card-content">
        <form method="get">
            <input type="number" name="ticketId" placeholder="Ticket ID" />
            <input type="number" name="agentId" placeholder="Agent ID" />
            <input type="date" name="startDate" />
            <input type="date" name="endDate" />
            <button type="submit" class="btn btn-primary btn-sm">Filter</button>
        </form>
        <table class="modern-table">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Details</th>
                    <th>User</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Action</td>
                        <td>@log.Details</td>
                        <td>@log.User?.FullName</td>
                        <td>@log.PerformedAt.ToString("MMM dd, HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>