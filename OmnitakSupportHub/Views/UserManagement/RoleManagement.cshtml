@model List<OmnitakSupportHub.Models.Role>
@{
    ViewData["Title"] = "Role Management";
}
<style>
    :root {
        --primary-deep-blue: #0F1419;
        --primary-navy: #1A237E;
        --accent-electric: #00E5FF;
        --accent-purple: #7B2CBF;
        --accent-gold: #FFB300;
        --surface-card: #242424;
        --text-primary: #FFFFFF;
        --text-secondary: rgba(255,255,255,0.7);
        --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
        --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
        --shadow-card: 0 8px 32px rgba(0, 229, 255, 0.08);
        --border-glow: rgba(0, 229, 255, 0.3);
    }

    body {
        background: var(--gradient-primary);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
    }

    .admin-card {
        max-width: 1200px;
        margin: 40px auto;
        background: var(--surface-card);
        border-radius: 24px;
        box-shadow: var(--shadow-card);
        padding: 2.5rem 2rem;
        color: var(--text-primary);
    }

    .admin-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2.2rem;
        font-weight: 800;
        background: var(--gradient-accent);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        letter-spacing: 1px;
    }

    .btn-back {
        background: var(--gradient-accent);
        color: #fff;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border: none;
        box-shadow: var(--shadow-card);
        text-decoration: none;
        transition: background 0.2s;
    }

        .btn-back:hover {
            background: var(--accent-gold);
            color: var(--primary-navy);
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: var(--gradient-accent);
        color: white;
        padding: 25px;
        border-radius: 16px;
        text-align: center;
        box-shadow: var(--shadow-card);
    }

    .roles-grid {
        display: grid;
        gap: 25px;
        margin-top: 30px;
    }

    .role-card {
        background: var(--surface-card);
        border: 2px solid var(--border-glow);
        border-radius: 20px;
        padding: 30px;
        box-shadow: var(--shadow-card);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .role-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 32px rgba(0,229,255,0.12);
            border-color: var(--accent-electric);
        }

    .role-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
    }

    .role-info h3 {
        margin: 0 0 8px 0;
        color: var(--accent-electric);
        font-size: 1.5rem;
        font-weight: 700;
    }

    .role-info p {
        margin: 0;
        color: var(--text-secondary);
        font-size: 1rem;
        line-height: 1.5;
    }

    .role-badges {
        display: flex;
        flex-direction: column;
        gap: 8px;
        align-items: flex-end;
    }

    .system-badge {
        background: var(--accent-purple);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .custom-badge {
        background: var(--accent-gold);
        color: #1A237E;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .permissions-section {
        margin: 25px 0;
    }

    .permissions-title {
        color: var(--text-primary);
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 15px;
        border-bottom: 1px solid var(--border-glow);
        padding-bottom: 8px;
    }

    .permissions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 12px;
    }

    .permission-item {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        background: var(--primary-deep-blue);
        border-radius: 8px;
        font-size: 0.9rem;
    }

    .permission-enabled {
        color: var(--accent-electric);
    }

    .permission-disabled {
        color: var(--text-secondary);
    }

    .role-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 25px;
        padding-top: 20px;
        border-top: 1px solid var(--border-glow);
    }

    .alert {
        margin-bottom: 25px;
        padding: 15px 20px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-left: 5px solid var(--accent-electric);
        background: rgba(0,229,255,0.1);
        color: var(--accent-electric);
        box-shadow: var(--shadow-card);
    }
</style>
<div class="admin-card">
    <div class="admin-header">
        <span class="admin-title">Role Management</span>
        <a asp-action="CreateRole" class="btn btn-primary" style="margin-right: 10px;">
            <i class="fas fa-plus"></i> Create Role
        </a>
        <a asp-controller="AdminDashboard" asp-action="Index" class="btn-back">← Admin Dashboard</a>
    </div>
    <div class="stats-grid">
        <div class="stat-card">
            <h3>@Model.Count</h3>
            <p>Total Roles</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Count(r => r.IsSystemRole)</h3>
            <p>System Roles</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Count(r => !r.IsSystemRole)</h3>
            <p>Custom Roles</p>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert">@TempData["SuccessMessage"]</div>
    }
    <div class="roles-grid">
        @if (Model.Any())
        {
            @foreach (var role in Model)
            {
                <div class="role-card">
                    <div class="role-header">
                        <div class="role-info">
                            <h3>@role.RoleName</h3>
                            <p>@(string.IsNullOrEmpty(role.Description) ? "No description provided" : role.Description)</p>
                        </div>
                        <div class="role-badges">
                            @if (role.IsSystemRole)
                            {
                                <span class="system-badge">
                                    <i class="fas fa-shield-alt"></i> System
                                </span>
                            }
                            else
                            {
                                <span class="custom-badge">
                                    <i class="fas fa-user-cog"></i> Custom
                                </span>
                            }
                        </div>
                    </div>
                    <div class="permissions-section">
                        <h4 class="permissions-title">
                            <i class="fas fa-key"></i> Permissions
                        </h4>
                        <div class="permissions-grid">
                            <div class="permission-item @(role.CanApproveUsers ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanApproveUsers ? "fa-check" : "fa-times")"></i>
                                <span>Approve Users</span>
                            </div>
                            <div class="permission-item @(role.CanManageTickets ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanManageTickets ? "fa-check" : "fa-times")"></i>
                                <span>Manage Tickets</span>
                            </div>
                            <div class="permission-item @(role.CanViewAllTickets ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanViewAllTickets ? "fa-check" : "fa-times")"></i>
                                <span>View All Tickets</span>
                            </div>
                            <div class="permission-item @(role.CanManageKnowledgeBase ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanManageKnowledgeBase ? "fa-check" : "fa-times")"></i>
                                <span>Manage Knowledge Base</span>
                            </div>
                            <div class="permission-item @(role.CanViewReports ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanViewReports ? "fa-check" : "fa-times")"></i>
                                <span>View Reports</span>
                            </div>
                            <div class="permission-item @(role.CanManageTeams ? "permission-enabled" : "permission-disabled")">
                                <i class="fas @(role.CanManageTeams ? "fa-check" : "fa-times")"></i>
                                <span>Manage Teams</span>
                            </div>
                        </div>
                    </div>
                    <div class="role-actions">
                        <a asp-action="EditRole" asp-route-id="@role.RoleID" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        @if (!role.IsSystemRole)
                        {
                            <form asp-action="DeleteRole" asp-route-id="@role.RoleID" method="post" style="display: inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this role? This action cannot be undone.');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled title="System roles cannot be deleted">
                                <i class="fas fa-lock"></i> Protected
                            </button>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert">
                <i class="fas fa-info-circle"></i> No roles found in the system.
            </div>
        }
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>