<div class="login-container">
    <div class="login-panel login-left">
        <h2>Welcome to Omnitak Support Hub</h2>
        <p>
            Streamline your IT support with our advanced system designed to keep your business running smoothly.
        </p>
    </div>

    <div class="login-panel login-right">
        <form method="post" asp-controller="Account" asp-action="Login">
            <!-- your login form fields -->
            <input type="text" name="Email" placeholder="Email" required />
            <input type="password" name="Password" placeholder="Password" required />
            <button type="submit" class="btn">Sign In</button>
        </form>
    </div>
</div>
