@model IEnumerable<OmnitakSupportHub.Models.Ticket>
@{
    ViewData["Title"] = "Employee Dashboard";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        height: 100vh;
        background: linear-gradient(135deg, #f0f2f5 0%, #e0e4e8 100%);
        overflow: hidden;
    }

    .dashboard-container {
        display: flex;
        width: 90%;
        max-width: 1200px;
        height: 90vh;
        margin: 2rem auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        animation: fadeIn 1s ease-in;
    }

    .sidebar {
        width: 250px;
        background: linear-gradient(135deg, #2e7d32 0%, #388e3c 100%);
        color: white;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: transform 0.3s ease;
    }

        .sidebar:hover {
            transform: scale(1.02);
        }

    .logo {
        width: 60px;
        height: 60px;
        background-color: #2e7d32;
        border-radius: 50%;
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5rem;
        color: white;
        animation: slideIn 1s ease-out;
    }

    .sidebar h3 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        animation: fadeInUp 1s ease-out forwards;
    }

    .nav-item {
        margin-bottom: 1rem;
        font-size: 1rem;
    }

        .nav-item a {
            color: white;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .nav-item a:hover {
                color: #d4e157;
            }

    .main-content {
        flex: 1;
        padding: 2rem;
        overflow-y: auto;
    }

    .welcome-header {
        font-size: 2rem;
        color: #2e7d32;
        margin-bottom: 1rem;
        animation: slideIn 1s ease-out;
    }

    .welcome-message {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 2rem;
        animation: fadeInUp 1s ease-out forwards;
        animation-delay: 0.5s;
    }

    .card {
        background: #fff;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .ticket-button {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(90deg, #2e7d32 0%, #388e3c 100%);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: transform 0.3s ease, background 0.3s ease;
    }

        .ticket-button:hover {
            transform: translateY(-2px);
            background: linear-gradient(90deg, #1b5e20 0%, #2e7d32 100%);}
</style>

<div class="dashboard-container">
    <div class="sidebar">
        <div class="logo">O</div>
        <h3>Menu</h3>
        <div class="nav-item"><a asp-action="Index" asp-controller="UserDashboard">Dashboard</a></div>
        <div class="nav-item"><a asp-action="Profile" asp-controller="UserDashboard">Profile</a></div>
        <div class="nav-item"><a asp-action="Index" asp-controller="UserDashboard">My Tickets</a></div>
        <div class="nav-item">
            <form asp-action="Logout" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-link text-white p-0" style="text-decoration: none; border: none; background: none;">
                    Logout
                </button>
            </form>
        </div>
    </div>

    <div class="main-content">
        <h2 class="welcome-header">Welcome, @User.Identity.Name!</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" style="margin-bottom: 1.5rem;">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="text-right mb-3">
            <a asp-action="Create" asp-controller="Ticket" class="ticket-button">Submit New Ticket</a>
        </div>

        @if (!Model.Any())
        {
            <div class="card">
                <h4>No Tickets Found</h4>
                <p>You haven't submitted any tickets yet. Click the button above to create one.</p>
            </div>
        }
        else
        {
            <div class="card">
                <h4>My Tickets</h4>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {
                            <tr>
                                <td>@ticket.TicketID</td>
                                <td>@ticket.Title</td>
                                <td>@ticket.Category?.CategoryName</td>
                                <td>@ticket.Priority?.PriorityName</td>
                                <td>@ticket.Status?.StatusName</td>
                                <td>@ticket.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>