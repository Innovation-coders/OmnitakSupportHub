@{
    ViewData["Title"] = "Welcome to Omnitak Support Hub";
}

<style>
    :root {
        --primary-deep-blue: #0F1419;
        --primary-navy: #1A237E;
        --accent-electric: #00E5FF;
        --accent-purple: #7B2CBF;
        --accent-gold: #FFB300;
        --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
        --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
        --shadow-glow: 0 0 40px rgba(0, 229, 255, 0.3);
    }

    body {
        background: var(--gradient-primary);
        color: #fff;
        min-height: 100vh;
    }

    .landing-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .landing-title {
        font-size: 2.8rem;
        font-weight: 800;
        background: var(--gradient-accent);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
        letter-spacing: -1px;
    }

    .landing-desc {
        font-size: 1.25rem;
        color: rgba(255,255,255,0.8);
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .login-btn {
        padding: 16px 40px;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 12px;
        background: var(--gradient-accent);
        color: #fff;
        border: none;
        box-shadow: var(--shadow-glow);
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .login-btn:hover {
            background: var(--accent-gold);
            color: #1A237E;
            transform: translateY(-2px) scale(1.04);
            box-shadow: 0 0 60px rgba(255,179,0,0.2);
        }

    .animated-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        background: var(--gradient-primary);
        overflow: hidden;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        background: var(--gradient-accent);
        opacity: 0.08;
        filter: blur(2px);
        animation: float 30s infinite linear;
    }

        .orb:nth-child(1) {
            width: 400px;
            height: 400px;
            top: -100px;
            left: -100px;
            animation-delay: 0s;
        }

        .orb:nth-child(2) {
            width: 300px;
            height: 300px;
            top: 70%;
            right: -150px;
            animation-delay: -12s;
        }

        .orb:nth-child(3) {
            width: 220px;
            height: 220px;
            bottom: -110px;
            left: 45%;
            animation-delay: -24s;
        }
    @@keyframes float {
        0%

    {
        transform: translateY(0) rotate(0deg);
    }

    33% {
        transform: translateY(-30px) rotate(120deg);
    }

    66% {
        transform: translateY(15px) rotate(240deg);
    }

    100% {
        transform: translateY(0) rotate(360deg);
    }

    }</style>

