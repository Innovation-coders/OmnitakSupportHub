@model OmnitakSupportHub.Models.ViewModels.UserManagementViewModel
@{
    ViewData["Title"] = "User Management";
}
<style>
    .admin-card {
        max-width: 1200px;
        margin: 40px auto;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e4e8 100%);
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(16,185,129,0.08), 0 0 40px rgba(16,185,129,0.08);
        padding: 2.5rem 2rem;
    }

    .admin-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2.2rem;
        font-weight: 800;
        color: #10b981;
        margin: 0;
        letter-spacing: 1px;
    }

    .btn-back {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: #fff;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border: none;
        box-shadow: 0 2px 12px rgba(16,185,129,0.12);
        text-decoration: none;
        transition: background 0.2s;
    }

        .btn-back:hover {
            background: #FFB300;
            color: #1A237E;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        padding: 25px;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 4px 16px rgba(16,185,129,0.08);
    }

    .users-grid {
        display: grid;
        gap: 20px;
        margin-top: 30px;
    }

    .user-card {
        background: #fff;
        border: 2px solid #e2e8f0;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 16px rgba(16,185,129,0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .user-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 32px rgba(16,185,129,0.12);
            border-color: #10b981;
        }

    .user-info {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 2fr auto;
        gap: 20px;
        align-items: center;
    }

    .user-details h4 {
        margin: 0 0 8px 0;
        color: #10b981;
        font-size: 1.3rem;
        font-weight: 700;
    }

    .user-details p {
        margin: 0;
        color: #64748b;
        font-size: 0.95rem;
    }

    .department-tag {
        background: linear-gradient(135deg, #34d399, #6ee7b7);
        color: #065f46;
        padding: 8px 16px;
        border-radius: 12px;
        font-weight: 600;
        text-align: center;
        font-size: 0.9rem;
        box-shadow: 0 2px 8px rgba(16,185,129,0.05);
    }

    .current-role {
        background: linear-gradient(135deg, #065f46, #059669);
        color: white;
        padding: 8px 16px;
        border-radius: 12px;
        font-weight: 600;
        text-align: center;
        font-size: 0.9rem;
        box-shadow: 0 2px 8px rgba(16,185,129,0.05);
    }

    .role-selector {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .role-select {
        padding: 8px 12px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        background: #fff;
        color: #0f172a;
        font-size: 0.95rem;
        min-width: 150px;
        transition: border-color 0.3s ease;
    }

        .role-select:focus {
            border-color: #10b981;
            outline: none;
        }

    .update-btn {
        padding: 8px 16px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(16,185,129,0.05);
    }

        .update-btn:hover {
            background: linear-gradient(135deg, #059669 0%, #065f46 100%);
            transform: translateY(-1px);
            box-shadow: 0 4px 16px rgba(16,185,129,0.08);
        }

    .alert {
        margin-bottom: 25px;
        padding: 15px 20px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-left: 5px solid #10b981;
        background: rgba(16,185,129,0.1);
        color: #10b981;
        box-shadow: 0 2px 8px rgba(16,185,129,0.05);
    }
</style>
<div class="admin-card">
    <div class="admin-header">
        <span class="admin-title">User Management</span>
        <a asp-controller="AdminDashboard" asp-action="Index" class="btn-back">← Admin Dashboard</a>
    </div>
    <div class="stats-grid">
        <div class="stat-card">
            <h3>@Model.Users.Count</h3>
            <p>Active Users</p>
        </div>
        <div class="stat-card">
            <h3>@Model.AvailableRoles.Count</h3>
            <p>Available Roles</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Users.Where(u => u.Department != null).GroupBy(u => u.DepartmentId).Count()</h3>
            <p>Departments</p>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert">@TempData["SuccessMessage"]</div>
    }
    <div class="users-grid">
        @if (Model.Users.Any())
        {
            @foreach (var user in Model.Users)
            {
                <div class="user-card">
                    <div class="user-info">
                        <div class="user-details">
                            <h4>@user.FullName</h4>
                            <p><i class="fas fa-envelope"></i> @user.Email</p>
                            <p><i class="fas fa-calendar"></i> Joined: @user.CreatedAt.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="department-tag">
                            <i class="fas fa-building"></i>
                            @(user.Department?.DepartmentName ?? "No Department")
                        </div>
                        <div class="current-role">
                            <i class="fas fa-user-tag"></i>
                            @(user.Role?.RoleName ?? "No Role")
                        </div>
                        <form asp-action="UpdateUserRole" method="post" class="role-selector">
                            <input type="hidden" name="userId" value="@user.UserID" />
                            <select name="roleId" class="role-select" required>
                                <option value="">-- Select New Role --</option>
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <option value="@role.Value"
                                            selected="@(role.Value == user.RoleID?.ToString())">
                                        @role.Text
                                    </option>
                                }
                            </select>
                            <button type="submit" class="update-btn">
                                <i class="fas fa-save"></i> Update
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert">
                <i class="fas fa-info-circle"></i> No active users found in the system.
            </div>
        }
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>