@model OmnitakSupportHub.Models.ViewModels.UserManagementViewModel
@{
    ViewData["Title"] = "User Management";
}
<style>
    :root {
        --primary-deep-blue: #0F1419;
        --primary-navy: #1A237E;
        --accent-electric: #00E5FF;
        --accent-purple: #7B2CBF;
        --accent-gold: #FFB300;
        --surface-card: #242424;
        --text-primary: #FFFFFF;
        --text-secondary: rgba(255,255,255,0.7);
        --gradient-primary: linear-gradient(135deg, #0F1419 0%, #1A237E 50%, #7B2CBF 100%);
        --gradient-accent: linear-gradient(45deg, #00E5FF, #7B2CBF);
        --shadow-card: 0 8px 32px rgba(0, 229, 255, 0.08);
        --border-glow: rgba(0, 229, 255, 0.3);
    }

    body {
        background: var(--gradient-primary);
        color: var(--text-primary);
        font-family: 'Inter', sans-serif;
    }

    .admin-card {
        max-width: 1200px;
        margin: 40px auto;
        background: var(--surface-card);
        border-radius: 24px;
        box-shadow: var(--shadow-card);
        padding: 2.5rem 2rem;
        color: var(--text-primary);
    }

    .admin-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
    }

    .admin-title {
        font-size: 2.2rem;
        font-weight: 800;
        background: var(--gradient-accent);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        letter-spacing: 1px;
    }

    .btn-back {
        background: var(--gradient-accent);
        color: #fff;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        border: none;
        box-shadow: var(--shadow-card);
        text-decoration: none;
        transition: background 0.2s;
    }

        .btn-back:hover {
            background: var(--accent-gold);
            color: var(--primary-navy);
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: var(--gradient-accent);
        color: white;
        padding: 25px;
        border-radius: 16px;
        text-align: center;
        box-shadow: var(--shadow-card);
    }

    .users-grid {
        display: grid;
        gap: 20px;
        margin-top: 30px;
    }

    .user-card {
        background: var(--surface-card);
        border: 2px solid var(--border-glow);
        border-radius: 16px;
        padding: 25px;
        box-shadow: var(--shadow-card);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .user-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 32px rgba(0,229,255,0.12);
            border-color: var(--accent-electric);
        }

    .user-info {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 2fr auto;
        gap: 20px;
        align-items: center;
    }

    .user-details h4 {
        margin: 0 0 8px 0;
        color: var(--accent-electric);
        font-size: 1.3rem;
        font-weight: 700;
    }

    .user-details p {
        margin: 0;
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .department-tag {
        background: var(--accent-purple);
        color: #fff;
        padding: 8px 16px;
        border-radius: 12px;
        font-weight: 600;
        text-align: center;
        font-size: 0.9rem;
        box-shadow: var(--shadow-card);
    }

    .current-role {
        background: var(--accent-gold);
        color: #1A237E;
        padding: 8px 16px;
        border-radius: 12px;
        font-weight: 600;
        text-align: center;
        font-size: 0.9rem;
        box-shadow: var(--shadow-card);
    }

    .role-selector {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .role-select {
        padding: 8px 12px;
        border: 2px solid var(--border-glow);
        border-radius: 8px;
        background: var(--surface-card);
        color: var(--text-primary);
        font-size: 0.95rem;
        min-width: 150px;
        transition: border-color 0.3s ease;
    }

        .role-select:focus {
            border-color: var(--accent-electric);
            outline: none;
        }

    .update-btn {
        padding: 8px 16px;
        background: var(--gradient-accent);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-card);
    }

        .update-btn:hover {
            background: var(--accent-gold);
            color: var(--primary-navy);
            transform: translateY(-1px);
        }

    .alert {
        margin-bottom: 25px;
        padding: 15px 20px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-left: 5px solid var(--accent-electric);
        background: rgba(0,229,255,0.1);
        color: var(--accent-electric);
        box-shadow: var(--shadow-card);
    }
</style>
<div class="admin-card">
    <div class="admin-header">
        <span class="admin-title">User Management</span>
        <a asp-controller="AdminDashboard" asp-action="Index" class="btn-back">← Admin Dashboard</a>
    </div>
    <div class="stats-grid">
        <div class="stat-card">
            <h3>@Model.Users.Count</h3>
            <p>Active Users</p>
        </div>
        <div class="stat-card">
            <h3>@Model.AvailableRoles.Count</h3>
            <p>Available Roles</p>
        </div>
        <div class="stat-card">
            <h3>@Model.Users.Where(u => u.Department != null).GroupBy(u => u.DepartmentId).Count()</h3>
            <p>Departments</p>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert">@TempData["SuccessMessage"]</div>
    }
    <div class="users-grid">
        @if (Model.Users.Any())
        {
            @foreach (var user in Model.Users)
            {
                <div class="user-card">
                    <div class="user-info">
                        <div class="user-details">
                            <h4>@user.FullName</h4>
                            <p><i class="fas fa-envelope"></i> @user.Email</p>
                            <p><i class="fas fa-calendar"></i> Joined: @user.CreatedAt.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div class="department-tag">
                            <i class="fas fa-building"></i>
                            @(user.Department?.DepartmentName ?? "No Department")
                        </div>
                        <div class="current-role">
                            <i class="fas fa-user-tag"></i>
                            @(user.Role?.RoleName ?? "No Role")
                        </div>
                        <form asp-action="UpdateUserRole" method="post" class="role-selector">
                            <input type="hidden" name="userId" value="@user.UserID" />
                            <select name="roleId" class="role-select" required>
                                <option value="">-- Select New Role --</option>
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <option value="@role.Value"
                                            selected="@(role.Value == user.RoleID?.ToString())">
                                        @role.Text
                                    </option>
                                }
                            </select>
                            <button type="submit" class="update-btn">
                                <i class="fas fa-save"></i> Update
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert">
                <i class="fas fa-info-circle"></i> No active users found in the system.
            </div>
        }
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>