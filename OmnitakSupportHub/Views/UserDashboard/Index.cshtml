@model IEnumerable<OmnitakSupportHub.Models.User>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th></th> <!-- Actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.UserID</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.UserID" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
